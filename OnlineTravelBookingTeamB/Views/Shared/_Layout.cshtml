<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReserveX Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>

    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="bi bi-airplane-engines-fill me-2"></i> ReserveX Admin
            </div>
            <div class="list-group list-group-flush mt-3">
                <a asp-controller="Admin" asp-action="Index" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a asp-controller="Admin" asp-action="Tours" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Tours" || ViewContext.RouteData.Values["Action"]?.ToString() == "CreateTour" ? "active" : "")">
                    <i class="bi bi-map me-2"></i> Tours
                </a>
                <a asp-controller="Admin" asp-action="Hotels" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Hotels" ? "active" : "")">
                    <i class="bi bi-building me-2"></i> Hotels
                </a>
                <a asp-controller="Admin" asp-action="Cars" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Cars" ? "active" : "")">
                    <i class="bi bi-car-front me-2"></i> Cars
                </a>
                <a asp-controller="Admin" asp-action="Flights" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Flights" ? "active" : "")">
                    <i class="bi bi-airplane me-2"></i> Flights
                </a>
                <a asp-controller="Admin" asp-action="SeedData" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "SeedData" ? "active" : "")">
                    <i class="bi bi-database-add me-2"></i> Seed Data
                </a>
                <a asp-controller="Admin" asp-action="Monitor" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["Action"]?.ToString() == "Monitor" ? "active" : "")">
                    <i class="bi bi-activity me-2"></i> Monitor System
                </a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="top-navbar">
                <div>
                   <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0 text-secondary" id="sidebarToggle"><i class="bi bi-list fs-4"></i></button>
                </div>
                <div class="user-profile">
                    <span>Admin User</span>
                    <div class="user-avatar"></div>
                </div>
            </nav>

            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Use simpler vanilla JS
        // document.getElementById('sidebarToggle').addEventListener('click', function(e) {
        //    e.preventDefault();
        //    document.body.classList.toggle('sb-sidenav-toggled');
        //    // We'd need css class for toggling margin-left of content and width of sidebar
        // });
        // For now, keep it fixed.
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
