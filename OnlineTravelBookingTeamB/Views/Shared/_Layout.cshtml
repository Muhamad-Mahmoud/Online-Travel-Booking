@{
    string ActiveClass(string action)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        return string.Equals(currentController, "Admin", StringComparison.OrdinalIgnoreCase) && 
               string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase) ? "active" : "";
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Travel Admin</title>

    <!-- Google Fonts: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">

    <!-- Bootstrap 5 (CSS Only) for Grid & Utilities if needed, but Custom CSS rides on top -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <link href="~/css/admin-style.css" rel="stylesheet">
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <a asp-controller="Admin" asp-action="Index" class="logo">
                    <i class="fas fa-paper-plane"></i>
                    <span>TravelAdmin</span>
                </a>
            </div>

            <div class="sidebar-content">
                <div class="menu-category">Menu</div>
                
                <div class="menu-item">
                    <a asp-controller="Admin" asp-action="Index" class="@ActiveClass("Index") menu-link">
                        <i class="fas fa-th-large"></i>
                        <span>Dashboard</span>
                    </a>
                </div>

                <div class="menu-category">Bookings & Services</div>

                <div class="menu-item">
                    <a asp-controller="Admin" asp-action="Bookings" class="@ActiveClass("Bookings") menu-link">
                        <i class="fas fa-calendar-check"></i>
                        <span>All Bookings</span>
                    </a>
                </div>

                <div class="menu-item">
                    <a asp-controller="Admin" asp-action="Tours" class="@ActiveClass("Tours") menu-link">
                        <i class="fas fa-globe-americas"></i>
                        <span>Tours</span>
                    </a>
                </div>
                <div class="menu-item">
                    <a asp-controller="Admin" asp-action="Hotels" class="@ActiveClass("Hotels") menu-link">
                        <i class="fas fa-hotel"></i>
                        <span>Hotels</span>
                    </a>
                </div>
                <div class="menu-item">
                    <a asp-controller="Admin" asp-action="Cars" class="@ActiveClass("Cars") menu-link">
                        <i class="fas fa-car"></i>
                        <span>Cars</span>
                    </a>
                </div>
                <div class="menu-item">
                    <a asp-controller="Admin" asp-action="Flights" class="@ActiveClass("Flights") menu-link">
                        <i class="fas fa-plane-departure"></i>
                        <span>Flights</span>
                    </a>
                </div>

                <div class="menu-category">Administration</div>

                <div class="menu-item">
                    <a asp-controller="Admin" asp-action="Users" class="@ActiveClass("Users") menu-link">
                        <i class="fas fa-users"></i>
                        <span>Users</span>
                    </a>
                </div>
                <div class="menu-item">
                    <a asp-controller="Admin" asp-action="Finance" class="@ActiveClass("Finance") menu-link">
                         <i class="fas fa-wallet"></i>
                        <span>Finance</span>
                    </a>
                </div>
                <div class="menu-item">
                    <a asp-controller="Admin" asp-action="Settings" class="@ActiveClass("Settings") menu-link">
                        <i class="fas fa-cog"></i>
                        <span>Settings</span>
                    </a>
                </div>
            </div>

            <div class="sidebar-footer">
                <a href="#" class="menu-link text-danger">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <button id="sidebarToggle" class="btn btn-link text-gray-600 border-0 p-0 me-3">
                    <i class="fas fa-bars fa-lg"></i>
                </button>


                <div class="header-tools">

                    
                    <div class="user-profile">
                        <div class="user-info">
                            <span class="user-name">Admin User</span>
                            <span class="user-role">Super Admin</span>
                        </div>
                        <img src="https://ui-avatars.com/api/?name=Admin+User&background=4361ee&color=fff" alt="User" class="user-avatar">
                    </div>
                </div>
            </header>

            <div class="content-wrapper">
                @RenderBody()
            </div>

            <div id="sidebarOverlay" class="sidebar-overlay"></div>

            <!-- Footer -->
            <footer class="footer">
                <p>&copy; 2026 Online Travel Booking. Premium Admin Dashboard.</p>
            </footer>
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebarOverlay = document.getElementById('sidebarOverlay');
            
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    document.body.classList.toggle('sidebar-toggled');
                });
            }
            
            if (sidebarOverlay) {
                sidebarOverlay.addEventListener('click', function() {
                    document.body.classList.remove('sidebar-toggled');
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
