@model OnlineTravelBookingTeamB.Models.TourViewModel

@{
    ViewData["Title"] = "Create Tour";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Create New Tour</h1>
    <a asp-action="Index" class="btn btn-secondary shadow-sm">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tour Details</h6>
            </div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="Title" class="form-label fw-bold small text-uppercase text-gray-800"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter tour title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold small text-uppercase text-gray-800"></label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Describe the tour..."></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="CategoryId" class="form-label fw-bold small text-uppercase text-gray-800"></label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-uppercase text-gray-800">Duration</label>
                            <div class="input-group">
                                <input asp-for="DurationDays" class="form-control" placeholder="Days" />
                                <span class="input-group-text">Days</span>
                                <input asp-for="DurationNights" class="form-control" placeholder="Nights" />
                                <span class="input-group-text">Nights</span>
                            </div>
                            <span asp-validation-for="DurationDays" class="text-danger small d-block"></span>
                        </div>
                    </div>

                    <h6 class="text-uppercase text-gray-800 fw-bold small mt-4 mb-3 border-bottom pb-2">Location</h6>
                    
                    <div class="row mb-3">
                         <div class="col-md-12">
                            <label asp-for="Street" class="form-label small text-muted">Street Address</label>
                            <input asp-for="Street" class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="City" class="form-label small text-muted">City</label>
                            <input asp-for="City" class="form-control" />
                        </div>
                        <div class="col-md-6">
                             <label asp-for="State" class="form-label small text-muted">State/Province</label>
                            <input asp-for="State" class="form-control" />
                        </div>
                    </div>
                     <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Country" class="form-label small text-muted">Country</label>
                            <input asp-for="Country" class="form-control" />
                        </div>
                        <div class="col-md-6">
                             <label asp-for="PostalCode" class="form-label small text-muted">Postal Code</label>
                            <input asp-for="PostalCode" class="form-control" />
                        </div>
                    </div>

                     <div class="mb-3">
                        <label class="form-label small text-muted"><i class="bi bi-search me-1"></i>Search Location</label>
                        <div class="input-group input-group-sm">
                            <input type="text" id="mapSearchInput" class="form-control" placeholder="Search for a place..." />
                            <button type="button" class="btn btn-outline-primary" id="mapSearchBtn"><i class="bi bi-search"></i></button>
                        </div>
                    </div>
                    <div id="createMap" style="height: 280px; border-radius: 8px; border: 2px solid #dee2e6; margin-bottom: 1rem; z-index: 1;"></div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Latitude" class="form-label small text-muted">Latitude</label>
                            <input asp-for="Latitude" class="form-control" id="createLat" placeholder="e.g. 48.8566" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Longitude" class="form-label small text-muted">Longitude</label>
                            <input asp-for="Longitude" class="form-control" id="createLng" placeholder="e.g. 2.3522" />
                        </div>
                    </div>

                    <h6 class="text-uppercase text-gray-800 fw-bold small mt-4 mb-3 border-bottom pb-2">Pricing &amp; Media</h6>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="StandardPrice" class="form-label fw-bold small text-uppercase text-gray-800"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="StandardPrice" class="form-control" />
                                <select asp-for="Currency" class="form-select" style="max-width: 100px;">
                                    <option value="USD">USD</option>
                                    <option value="EUR">EUR</option>
                                    <option value="EGP">EGP</option>
                                </select>
                            </div>
                            <span asp-validation-for="StandardPrice" class="text-danger small"></span>
                        </div>
                         <div class="col-md-6">
                            <label asp-for="BestTimeToVisit" class="form-label fw-bold small text-uppercase text-gray-800"></label>
                            <input asp-for="BestTimeToVisit" class="form-control" placeholder="e.g. Summer, May-Sep" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MainImage" class="form-label fw-bold small text-uppercase text-gray-800"></label>
                        <input asp-for="MainImage" class="form-control" type="file" accept="image/*" />
                        <span asp-validation-for="MainImage" class="text-danger small"></span>
                    </div>

                    <div class="mb-4 form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Recommended" />
                        <label class="form-check-label" asp-for="Recommended">
                            Recommended Tour
                        </label>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                         <a asp-action="Index" class="btn btn-light me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">Create Tour</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card shadow mb-4">
             <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tips</h6>
            </div>
            <div class="card-body">
                <p class="small text-muted">
                    <i class="bi bi-geo-alt me-1"></i> Click anywhere on the map to set coordinates, or search for a location.
                </p>
                <p class="small text-muted">
                    <i class="bi bi-info-circle me-1"></i> Ensure images are high quality URLs.
                </p>
                <p class="small text-muted">
                    <i class="bi bi-info-circle me-1"></i> Descriptions should be engaging and accurate.
                </p>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var map = L.map('createMap').setView([30.0444, 31.2357], 3);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors',
                maxZoom: 19
            }).addTo(map);

            var marker = null;
            var latInput = document.getElementById('createLat');
            var lngInput = document.getElementById('createLng');

            function placeMarker(lat, lng) {
                if (marker) map.removeLayer(marker);
                marker = L.marker([lat, lng], { draggable: true }).addTo(map);
                latInput.value = lat.toFixed(6);
                lngInput.value = lng.toFixed(6);
                marker.on('dragend', function (e) {
                    var pos = e.target.getLatLng();
                    latInput.value = pos.lat.toFixed(6);
                    lngInput.value = pos.lng.toFixed(6);
                });
            }

            map.on('click', function (e) {
                placeMarker(e.latlng.lat, e.latlng.lng);
            });

            // Sync manual input to map
            function syncFromInputs() {
                var lat = parseFloat(latInput.value);
                var lng = parseFloat(lngInput.value);
                if (!isNaN(lat) && !isNaN(lng) && lat >= -90 && lat <= 90 && lng >= -180 && lng <= 180) {
                    placeMarker(lat, lng);
                    map.setView([lat, lng], 13);
                }
            }
            latInput.addEventListener('change', syncFromInputs);
            lngInput.addEventListener('change', syncFromInputs);

            // Search
            var searchInput = document.getElementById('mapSearchInput');
            var searchBtn = document.getElementById('mapSearchBtn');
            function doSearch() {
                var q = searchInput.value.trim();
                if (!q) return;
                fetch('https://nominatim.openstreetmap.org/search?format=json&q=' + encodeURIComponent(q) + '&limit=1')
                    .then(r => r.json())
                    .then(data => {
                        if (data.length > 0) {
                            var lat = parseFloat(data[0].lat);
                            var lng = parseFloat(data[0].lon);
                            placeMarker(lat, lng);
                            map.setView([lat, lng], 13);
                        } else {
                            alert('Location not found.');
                        }
                    });
            }
            searchBtn.addEventListener('click', doSearch);
            searchInput.addEventListener('keydown', function (e) { if (e.key === 'Enter') { e.preventDefault(); doSearch(); } });
        });
    </script>
}
