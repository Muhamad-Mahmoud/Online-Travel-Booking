@model OnlineTravel.Application.Common.PagedResult<OnlineTravel.Application.Features.Tours.GetAllTours.DTOs.TourResponse>
@using OnlineTravel.Application.Features.Tours.GetAllTours.DTOs
@using System.Linq
@{
    ViewData["Title"] = "Tours Management";
    var tours = Model?.Data ?? new List<TourResponse>();
    var totalTours = Model?.TotalCount ?? 0;
    var avgPrice = tours.Any() ? tours.Average(t => t.Price) : 0;
    var topRated = tours.Count(t => t.Rating >= 4.5);
    var search = ViewBag.SearchTerm as string;
}

<div class="container-fluid py-4">
    <!-- Authority Header -->
    <partial name="_AdminPageHeader" model='new AdminPageHeaderViewModel {
        Title = "Tours",
        TitleSuffix = "Fleet",
        IconClass = "fas fa-globe-americas",
        IconBgClass = "bg-primary",
        StatusText = "DISCOVERY ACTIVE",
        StatusIconClass = "fas fa-map-marked-alt",
        BadgeText = $"NODES: {totalTours}",
        Breadcrumbs = new List<BreadcrumbItem> {
            new BreadcrumbItem { Text = "Tours", IsActive = true }
        },
        ShowSearch = true,
        SearchValue = search,
        SearchPlaceholder = "Search mission nodes...",
        ActionButtons = new List<ActionButtonViewModel> {
            new ActionButtonViewModel { 
                Text = "New Tour", 
                IconClass = "fas fa-plus", 
                Action = "Create", 
                Class = "btn-premium-dark" 
            }
        }
    }' />

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm rounded-4 mb-4 d-flex align-items-center p-3 text-success bg-success-light">
            <div class="icon-square bg-success text-white me-3 rounded-circle" style="width:38px;height:38px;">
                <i class="fas fa-check"></i>
            </div>
            <div class="fw-bold">@TempData["Success"]</div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Total Inventory",
                Value = totalTours.ToString(),
                IconClass = "fas fa-globe",
                IconBgClass = "bg-primary-light",
                IconTextClass = "text-primary"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Avg Anchor",
                Value = $"${avgPrice:N0}",
                IconClass = "fas fa-dollar-sign",
                IconBgClass = "bg-success-light",
                IconTextClass = "text-success"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Elite Rated",
                Value = topRated.ToString(),
                IconClass = "fas fa-award",
                IconBgClass = "bg-info-light",
                IconTextClass = "text-info"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Active Review",
                Value = tours.Count(t => t.Rating > 0).ToString(),
                IconClass = "fas fa-star",
                IconBgClass = "bg-warning-light",
                IconTextClass = "text-warning"
            }' />
        </div>
    </div>

    <!-- Main Content Card -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
        <div class="card-body p-0">
            @if (tours.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light small">
                            <tr>
                                <th class="ps-4">Tour Discovery</th>
                                <th>Category</th>
                                <th class="text-center">Commercial</th>
                                <th class="text-center">Status Index</th>
                                <th class="text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tour in tours)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(tour.ImageUrl))
                                            {
                                                <img src="@tour.ImageUrl" alt="@tour.Title" class="rounded-3 me-3" style="width:45px; height:45px; object-fit:cover;" />
                                            }
                                            else
                                            {
                                                <div class="icon-square me-3 bg-light text-muted rounded-3" style="width:45px; height:45px;">
                                                    <i class="fas fa-image"></i>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold text-dark mb-0">@tour.Title</div>
                                                <div class="x-small text-muted"><i class="fas fa-map-marker-alt me-1"></i>@tour.City, @tour.Country</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary-light text-primary rounded-pill px-3">@tour.Category</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="fw-bold text-dark">@tour.Currency @tour.Price.ToString("N2")</div>
                                        <div class="x-small text-muted text-uppercase fw-bold">BASE UNIT</div>
                                    </td>
                                    <td class="text-center">
                                        @if (tour.Rating > 0)
                                        {
                                            <div class="d-flex align-items-center justify-content-center gap-1">
                                                <div class="text-warning small"><i class="fas fa-star"></i></div>
                                                <span class="fw-bold text-dark">@tour.Rating.ToString("0.0")</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted x-small">UNRATED</span>
                                        }
                                    </td>
                                    <td class="pe-4">
                                        <div class="d-flex gap-2 justify-content-end">
                                            <a asp-action="Manage" asp-route-id="@tour.Id" class="btn btn-icon-soft btn-soft-primary" title="Edit Properties">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@tour.Id" method="post" class="d-inline" data-confirm="Are you sure you want to delete this tour?" data-confirm-title="Confirm Deletion">
                                                <button type="submit" class="btn btn-icon-soft btn-soft-danger" title="Purge Node">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.TotalPages >= 1)
                {
                    <div class="card-footer bg-white border-top p-3 text-center">
                        <partial name="_Pagination" model="@PaginationViewModel.Create(Model, "Index", "Tours", new { search = search })" />
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                        <i class="fas fa-globe-americas fa-2x text-muted opacity-50"></i>
                    </div>
                    <h4 class="fw-bold text-dark">No Tours Found</h4>
                    <p class="text-muted mb-4">The discovery hub has no active mission nodes. Start by provisioning a new tour.</p>
                    <a asp-action="Create" class="btn btn-primary rounded-pill px-5 py-2 fw-bold shadow-sm">
                        <i class="fas fa-plus me-2"></i> PROVISION FIRST TOUR
                    </a>
                </div>
            }
        </div>
    </div>
</div>






