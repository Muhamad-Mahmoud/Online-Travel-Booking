@model AdminBookingResponse
@using OnlineTravelBookingTeamB.Helpers

@{
    ViewData["Title"] = "Booking Details";
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent p-0 mb-1">
                <li class="breadcrumb-item"><a asp-action="Index" class="text-muted text-decoration-none">Bookings</a></li>
                <li class="breadcrumb-item active" aria-current="page">Details</li>
            </ol>
        </nav>
        <h2 class="h3 fw-bold text-dark mb-0">Booking #@Model.BookingReference</h2>
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
    </div>
</div>

<div class="row">
    <!-- Main Content Column -->
    <div class="col-lg-8">
        <!-- Service Card -->
        <div class="card shadow-sm border-0 rounded-4 mb-4">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div>
                        <span class="badge @Model.Type.GetTypeColorClass() px-3 py-2 rounded-pill mb-2">@Model.Type</span>
                        <h4 class="fw-bold text-dark mb-1">@Model.ItemName</h4>

                    </div>
                    <div class="text-end">
                        <div class="h3 fw-bold text-dark mb-0">@Model.TotalAmount @Model.Currency</div>
                        <span class="badge @Model.PaymentStatus.GetPaymentLabelClass() rounded-pill">
                            @Model.PaymentStatus
                        </span>
                    </div>
                </div>

                <div class="p-3 bg-light rounded-3 d-flex justify-content-between text-center mb-4 border border-dashed">
                    <div class="px-3">
                        <label class="text-uppercase text-muted x-small fw-bold mb-1">Check In</label>
                        <div class="h5 fw-bold text-dark mb-0">@Model.StartDate.ToString("MMM dd")</div>
                        <small class="text-muted">@Model.StartDate.ToString("yyyy")</small>
                    </div>
                    <div class="align-self-center text-muted opacity-50">
                        <i class="fas fa-arrow-right"></i>
                        <div class="small">@( (Model.EndDate - Model.StartDate).Days ) Days</div>
                    </div>
                    <div class="px-3">
                        <label class="text-uppercase text-muted x-small fw-bold mb-1">Check Out</label>
                        <div class="h5 fw-bold text-dark mb-0">@Model.EndDate.ToString("MMM dd")</div>
                        <small class="text-muted">@Model.EndDate.ToString("yyyy")</small>
                    </div>
                </div>

                <h6 class="text-uppercase text-muted x-small fw-bold mb-3">Payment Information</h6>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <div class="p-3 border rounded-3 h-100">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fab fa-stripe fa-lg text-primary me-2"></i>
                                <span class="fw-bold text-dark">Stripe Payment</span>
                            </div>
                            <div class="small text-muted mb-1">Session ID:</div>
                            <code class="text-dark bg-light px-2 py-1 rounded small d-block text-truncate mb-2">@(Model.StripeSessionId ?? "N/A")</code>
                            
                            <div class="small text-muted mb-1">Payment Intent ID:</div>
                            <code class="text-dark bg-light px-2 py-1 rounded small d-block text-truncate">@(Model.PaymentIntentId ?? "N/A")</code>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="p-3 border rounded-3 h-100">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small">Subtotal</span>
                                <span class="fw-bold small">@Model.TotalAmount @Model.Currency</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-muted small">Payment Status</span>
                                <span class="badge @Model.PaymentStatus.GetPaymentBadgeClass().Replace("text-", "bg-") px-2 rounded-pill text-white">@Model.PaymentStatus</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted small">Taxes & Fees</span>
                                <span class="fw-bold small">0 @Model.Currency</span>
                            </div>
                            <hr class="my-2">
                            <div class="d-flex justify-content-between">
                                <span class="fw-bold text-dark">Total</span>
                                <span class="fw-bold text-primary">@Model.TotalAmount @Model.Currency</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Log (Placeholder) -->
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="m-0 fw-bold text-dark">Booking Timeline</h6>
            </div>
            <div class="card-body p-4">
                <div class="timeline-item pb-4 position-relative border-start ps-4" style="border-color: #e3e6f0 !important;">
                    <i class="fas fa-circle text-primary position-absolute" style="left: -5px; top: 0; font-size: 10px;"></i>
                    <div class="fw-bold text-dark">Booking Created</div>
                    <div class="text-muted small">@Model.BookingDate.ToString("MMM dd, yyyy HH:mm")</div>
                </div>
                @if (Model.PaidAt.HasValue)
                {
                    <div class="timeline-item pb-4 position-relative border-start ps-4" style="border-color: #e3e6f0 !important;">
                        <i class="fas fa-circle text-success position-absolute" style="left: -5px; top: 0; font-size: 10px;"></i>
                        <div class="fw-bold text-dark">Payment Confirmed</div>
                        <div class="text-muted small">@Model.PaidAt.Value.ToString("MMM dd, yyyy HH:mm")</div>
                    </div>
                }
                <!-- More items can be added dynamically -->
            </div>
        </div>
    </div>

    <!-- Side Column -->
    <div class="col-lg-4">
        <!-- Customer Info -->
        <div class="card shadow-sm border-0 rounded-4 mb-4">
            <div class="card-body text-center p-4">
                <div class="position-relative d-inline-block mb-3">
                    <img src="https://ui-avatars.com/api/?name=@Model.UserName&background=eaf0ff&color=4361ee&size=128" class="rounded-circle" width="80" height="80">
                    <span class="position-absolute bottom-0 end-0 p-1 bg-success border border-white rounded-circle"></span>
                </div>
                <h5 class="fw-bold text-dark mb-1">@Model.UserName</h5>
                <p class="text-muted small mb-3">Customer since @Model.UserJoinedAt.ToString("MMM yyyy")</p>
                <div class="d-grid gap-2">
                    <a href="mailto:@Model.UserEmail" class="btn btn-light btn-sm"><i class="far fa-envelope me-2"></i>Send Email</a>
                    <a asp-action="UserBookings" asp-route-userId="@Model.UserId" class="btn btn-outline-primary btn-sm"><i class="fas fa-history me-2"></i>History</a>
                </div>
            </div>
        </div>

        <!-- Current Status -->
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-4">
                <h6 class="text-uppercase text-muted x-small fw-bold mb-3">Current Status</h6>
                <div class="alert @Model.Status.GetStatusAlertClass() border-0 d-flex align-items-center mb-0">
                    <i class="fas @Model.Status.GetStatusIconClass() fa-lg me-3"></i>
                    <div>
                        <div class="fw-bold">@Model.Status</div>
                        <div class="small opacity-75">Updated @Model.BookingDate.ToString("MMM dd, yyyy")</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .border-dashed { border-style: dashed !important; }
    .x-small { font-size: 0.75rem; }
    .timeline-item:last-child { padding-bottom: 0 !important; border-left: 0 !important; }
</style>
