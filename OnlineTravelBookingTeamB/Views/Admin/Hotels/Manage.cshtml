@model OnlineTravelBookingTeamB.Models.ManageHotelViewModel
@{
    ViewData["Title"] = $"Manage Property - {Model.Hotel.Name}";
    var hotel = Model.Hotel;
}

<div class="admin-container">
    <div class="container py-5">
        <!-- Header Section -->
        <div class="d-flex justify-content-between align-items-end mb-5 pb-4 border-bottom">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-2">
                        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Hotels</a></li>
                        <li class="breadcrumb-item active">@hotel.Name</li>
                    </ol>
                </nav>
                <div class="d-flex align-items-center gap-3">
                    <h1 class="fw-bold mb-0">@hotel.Name</h1>
                    <span class="badge bg-primary-soft text-primary px-3 rounded-pill">Active Property</span>
                </div>
                <p class="text-muted mt-2 mb-0"><i class="fas fa-map-marker-alt me-1"></i> @hotel.Address?.Street, @hotel.Address?.City, @hotel.Address?.Country</p>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-3 text-dark border-light shadow-sm bg-white">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
                <button class="btn btn-primary px-4 rounded-3 shadow-sm" data-bs-toggle="collapse" data-bs-target="#editHotelSection">
                    <i class="fas fa-edit me-2"></i>Edit Profile
                </button>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center p-3 animate__animated animate__fadeIn">
                <i class="fas fa-check-circle me-3 fs-4"></i>
                <div class="fw-medium">@TempData["Success"]</div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Quick Stats Row -->
        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="stat-card p-4 border rounded-4 bg-white shadow-sm h-100">
                    <span class="text-muted x-small fw-bold text-uppercase d-block mb-1">Total Rooms</span>
                    <h3 class="fw-bold mb-0">@hotel.Rooms.Count</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card p-4 border rounded-4 bg-white shadow-sm h-100">
                    <span class="text-muted x-small fw-bold text-uppercase d-block mb-1">Star Rating</span>
                    <h3 class="fw-bold mb-0 text-warning">@(hotel.Rating?.Value.ToString("0.0") ?? "N/A")</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card p-4 border rounded-4 bg-white shadow-sm h-100">
                    <span class="text-muted x-small fw-bold text-uppercase d-block mb-1">Check-in Time</span>
                    <h3 class="fw-bold mb-0">@hotel.CheckInTime.Start.ToString("HH:mm")</h3>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card p-4 border rounded-4 bg-white shadow-sm h-100">
                    <span class="text-muted x-small fw-bold text-uppercase d-block mb-1">Bookings</span>
                    <h3 class="fw-bold mb-0">2.4k <small class="text-success fs-6 fw-normal">+12%</small></h3>
                </div>
            </div>
        </div>

        <div class="row g-5">
            <!-- Left Side: Main Management -->
            <div class="col-lg-8">
                <!-- Edit Section -->
                <div class="collapse mb-4" id="editHotelSection">
                    <div class="card border-primary-subtle shadow-sm rounded-4">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-4">Edit Property Details</h5>
                            <form asp-action="Edit" method="post">
                                <input type="hidden" asp-for="EditForm.Id" value="@hotel.Id" />
                                <div class="row g-3">
                                    <div class="col-md-12">
                                        <label class="form-label small fw-bold">Hotel Name</label>
                                        <input asp-for="EditForm.Name" class="form-control" value="@hotel.Name" />
                                    </div>
                                    <div class="col-md-12">
                                        <label class="form-label small fw-bold">Description</label>
                                        <textarea asp-for="EditForm.Description" class="form-control" rows="3">@hotel.Description</textarea>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold">City</label>
                                        <input asp-for="EditForm.City" class="form-control" value="@hotel.Address?.City" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label small fw-bold">Country</label>
                                        <input asp-for="EditForm.Country" class="form-control" value="@hotel.Address?.Country" />
                                    </div>
                                    <div class="col-12 text-end mt-4">
                                        <button type="button" class="btn btn-light me-2" data-bs-toggle="collapse" data-bs-target="#editHotelSection">Cancel</button>
                                        <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Rooms Section -->
                <div class="section-header d-flex justify-content-between align-items-center mb-4">
                    <h4 class="fw-bold mb-0">Rooms & Inventory</h4>
                    <button class="btn btn-success btn-sm rounded-3 px-3 fw-bold" data-bs-toggle="modal" data-bs-target="#addRoomModal">
                        <i class="fas fa-plus me-1"></i>Add New Room
                    </button>
                </div>

                <div class="table-card border rounded-4 bg-white shadow-sm overflow-hidden mb-5">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">No.</th>
                                    <th>Room Name / Type</th>
                                    <th>Price/Night</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var room in hotel.Rooms)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold">#@room.RoomNumber</td>
                                        <td>
                                            <div class="fw-bold">@room.Name</div>
                                            <small class="text-muted d-block text-truncate" style="max-width: 250px;">@room.Description</small>
                                        </td>
                                        <td><span class="fw-bold text-success">$@room.BasePricePerNight.Amount.ToString("N0")</span></td>
                                        <td class="text-end pe-4">
                                            <button class="btn btn-icon text-muted" onclick="editRoom('@room.Id','@room.Name')"><i class="fas fa-edit"></i></button>
                                            <form asp-action="DeleteRoom" asp-route-id="@room.Id" asp-route-hotelId="@hotel.Id" method="post" class="d-inline" data-confirm="Are you sure you want to delete this room?" data-confirm-title="Delete Room">
                                                <button type="submit" class="btn btn-icon text-danger"><i class="fas fa-trash"></i></button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                @if (!hotel.Rooms.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5 text-muted">No rooms found for this property.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Content Info Section -->
                <h4 class="fw-bold mb-4">Location & Policies</h4>
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card border-0 bg-light-soft rounded-4 p-4 h-100">
                            <h6 class="fw-bold mb-3"><i class="fas fa-shield-alt text-primary me-2"></i>Cancellation Policy</h6>
                            <p class="text-muted mb-0">@hotel.CancellationPolicy</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card border-0 bg-light-soft rounded-4 p-4 h-100">
                            <h6 class="fw-bold mb-3"><i class="fas fa-map-marked text-primary me-2"></i>Full Address</h6>
                            <p class="text-muted mb-0">@hotel.Address?.Street<br>@hotel.Address?.City, @hotel.Address?.Country</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side: Sidebar Meta -->
            <div class="col-lg-4">
                <div class="card border rounded-4 shadow-sm bg-white p-4 mb-4">
                    <h5 class="fw-bold mb-4">Property Visuals</h5>
                    <img src="/@(hotel.MainImageUrl ?? "images/placeholder-hotel.jpg")" class="img-fluid rounded-4 mb-3 border shadow-sm" alt="@hotel.Name">
                    <button class="btn btn-light w-100 rounded-3 fw-bold border">Manage Gallery</button>
                </div>

                <div class="card border rounded-4 shadow-sm bg-white p-4 mb-4">
                    <h5 class="fw-bold mb-4">Operational Contacts</h5>
                    <div class="mb-3">
                        <label class="x-small text-muted fw-bold text-uppercase d-block mb-1">Email</label>
                        <span class="fw-medium">@(hotel.ContactInfo?.Email?.Value ?? "N/A")</span>
                    </div>
                    <div class="mb-3">
                        <label class="x-small text-muted fw-bold text-uppercase d-block mb-1">Phone</label>
                        <span class="fw-medium">@(hotel.ContactInfo?.Phone?.Value ?? "N/A")</span>
                    </div>
                    <div>
                        <label class="x-small text-muted fw-bold text-uppercase d-block mb-1">Website</label>
                        <a href="@hotel.ContactInfo?.Website" target="_blank" class="text-primary text-decoration-none fw-medium">View Property Site</a>
                    </div>
                </div>

                <div class="card border-0 rounded-4 shadow-sm bg-dark text-white p-4">
                    <h6 class="fw-bold mb-3">Timings</h6>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="opacity-75">Check-in:</span>
                        <span class="fw-bold">@hotel.CheckInTime.Start.ToString("HH:mm") - @hotel.CheckInTime.End.ToString("HH:mm")</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="opacity-75">Check-out:</span>
                        <span class="fw-bold">@hotel.CheckOutTime.Start.ToString("HH:mm") - @hotel.CheckOutTime.End.ToString("HH:mm")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal: Add Room -->
<div class="modal fade" id="addRoomModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header">
                <h5 class="modal-title fw-bold">New Room Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AddRoom" method="post">
                <input type="hidden" asp-for="RoomForm.HotelId" value="@hotel.Id" />
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Room Name</label>
                        <input asp-for="RoomForm.Name" class="form-control" placeholder="e.g. Deluxe Suite" required />
                    </div>
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label class="form-label small fw-bold">Room No.</label>
                            <input asp-for="RoomForm.RoomNumber" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold">Price per Night</label>
                            <input name="RoomForm.BasePricePerNight" type="number" step="0.01" class="form-control" required />
                        </div>
                    </div>
                    <div class="mb-0">
                        <label class="form-label small fw-bold">Features / Summary</label>
                        <textarea asp-for="RoomForm.Description" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light rounded-2" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4 rounded-2">Create Room</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body { font-family: 'Inter', -apple-system, sans-serif; background-color: #fcfdfe; color: #1a1a1b; }
    .x-small { font-size: 0.7rem; letter-spacing: 0.5px; }
    .bg-primary-soft { background-color: rgba(67, 97, 238, 0.1); }
    .bg-light-soft { background-color: #f8f9fa; }
    .rounded-4 { border-radius: 1rem !important; }
    .stat-card { transition: transform 0.2s; border: 1px solid #edf1f7; }
    .stat-card:hover { border-color: #4361ee; }
    .btn-icon { width: 34px; height: 34px; border-radius: 8px; border: 0; background: transparent; transition: 0.2s; }
    .btn-icon:hover { background: #f0f2f5; }
    .form-control, .form-select { border: 1px solid #e1e8f0; padding: 0.6rem 1rem; border-radius: 0.6rem; }
    .form-control:focus { border-color: #4361ee; box-shadow: 0 0 0 4px rgba(67, 97, 238, 0.1); }
    .breadcrumb-item a { text-decoration: none; color: #6c757d; font-weight: 500; }
    .breadcrumb-item.active { color: #1a1a1b; font-weight: 600; }
    .table thead th { font-weight: 700; text-transform: uppercase; font-size: 0.75rem; color: #64748b; letter-spacing: 0.5px; border-bottom: none; }
</style>
