@model IEnumerable<OnlineTravel.Domain.Entities.Hotels.Hotel>
@using OnlineTravel.Domain.Entities.Hotels

@{
    ViewData["Title"] = "Hotels Management";
    var hotelList = Model?.ToList() ?? new List<Hotel>();
}

<form method="get" action="@Url.Action("Index", "Hotels")" class="row g-3 justify-content-between align-items-center mb-4">
    <div class="col-12 col-lg-auto">
        <h1 class="h3 fw-bold text-dark mb-1">Hotels</h1>
        <p class="text-muted small mb-0">Manage all hotel properties and their rooms in one place.</p>
    </div>
    <div class="col-12 col-lg-auto">
        <div class="d-flex flex-column flex-sm-row flex-lg-nowrap gap-2 filter-section">
            <div class="input-group shadow-sm search-group">
                <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                <input type="text" name="search" class="form-control border-start-0 ps-0" placeholder="Search hotel name, city..." value="@ViewBag.SearchTerm">
            </div>
            <div class="d-flex gap-2 action-buttons">
                <button type="submit" class="btn btn-primary shadow-sm"><i class="fas fa-filter me-2"></i>Filter</button>
                <a asp-controller="Hotels" asp-action="Index" class="btn btn-white shadow-sm" title="Clear Filters"><i class="fas fa-undo text-muted"></i></a>
                <a asp-controller="Hotels" asp-action="Create" class="btn btn-success shadow-sm"><i class="fas fa-plus me-2"></i>Add Hotel</a>
            </div>
        </div>
    </div>
</form>

<!-- Stats Overview -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="stat-card h-100 border-start border-4 border-primary">
            <div class="stat-header mb-2">
                <span class="text-uppercase text-muted small fw-bold">Total Hotels</span>
                <i class="fas fa-hotel text-primary opacity-50 fa-lg"></i>
            </div>
            <div class="h3 fw-bold mb-0">@hotelList.Count</div>
            <span class="small text-muted">Registered properties</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card h-100 border-start border-4 border-success">
            <div class="stat-header mb-2">
                <span class="text-uppercase text-muted small fw-bold">Total Rooms</span>
                <i class="fas fa-door-open text-success opacity-50 fa-lg"></i>
            </div>
            <div class="h3 fw-bold mb-0">@hotelList.Sum(h => h.Rooms.Count)</div>
            <span class="small text-success">Across all hotels</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card h-100 border-start border-4 border-warning">
            <div class="stat-header mb-2">
                <span class="text-uppercase text-muted small fw-bold">Avg Rating</span>
                <i class="fas fa-star text-warning opacity-50 fa-lg"></i>
            </div>
            @{
                var ratedHotels = hotelList.Where(h => h.Rating != null).ToList();
                var avgRating = ratedHotels.Any() ? ratedHotels.Average(h => (decimal)h.Rating!) : 0;
            }
            <div class="h3 fw-bold mb-0">@avgRating.ToString("0.0")</div>
            <span class="small text-warning">From @ratedHotels.Count rated hotels</span>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stat-card h-100 border-start border-4 border-info">
            <div class="stat-header mb-2">
                <span class="text-uppercase text-muted small fw-bold">With Images</span>
                <i class="fas fa-image text-info opacity-50 fa-lg"></i>
            </div>
            <div class="h3 fw-bold mb-0">@hotelList.Count(h => !string.IsNullOrEmpty(h.MainImageUrl))</div>
            <span class="small text-muted">Hotels with cover photo</span>
        </div>
    </div>
</div>

<!-- Hotels Table -->
<div class="card shadow-sm border-0 rounded-4 overflow-hidden">
    <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
        <h6 class="m-0 fw-bold text-dark">All Hotels</h6>
        <span class="badge bg-light text-secondary border small">@hotelList.Count hotel@(hotelList.Count != 1 ? "s" : "")</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0" id="hotelsTable">
            <thead class="bg-light text-muted small text-uppercase">
                <tr>
                    <th class="ps-4 py-3 border-0 rounded-start">Hotel</th>
                    <th class="py-3 border-0">Location</th>
                    <th class="py-3 border-0">Rooms</th>
                    <th class="py-3 border-0">Rating</th>
                    <th class="py-3 border-0">Contact</th>
                    <th class="pe-4 py-3 border-0 text-end rounded-end">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (hotelList.Any())
                {
                    foreach (var hotel in hotelList)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(hotel.MainImageUrl))
                                    {
                                        <img src="@hotel.MainImageUrl" alt="@hotel.Name" class="rounded me-3" style="width:45px; height:45px; object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <div class="icon-square me-3 bg-primary-light text-primary">
                                            <i class="fas fa-hotel"></i>
                                        </div>
                                    }
                                    <div>
                                        <div class="fw-bold text-dark small">@hotel.Name</div>
                                        <div class="text-muted x-small">@hotel.Slug</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="fw-medium text-dark small">@hotel.Address?.City</div>
                                <div class="text-muted x-small">@hotel.Address?.Country</div>
                            </td>
                            <td>
                                <span class="badge bg-primary-light text-primary px-3 py-2 rounded-pill fw-normal">
                                    <i class="fas fa-door-open me-1"></i>@hotel.Rooms.Count
                                </span>
                            </td>
                            <td>
                                @if (hotel.Rating != null)
                                {
                                    var stars = (int)(decimal)hotel.Rating;
                                    <div class="text-warning small">
                                        @for (int i = 0; i < stars; i++)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        @for (int i = stars; i < 5; i++)
                                        {
                                            <i class="far fa-star text-muted"></i>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted x-small">No Rating</span>
                                }
                            </td>
                            <td class="small">
                                @if (hotel.ContactInfo != null)
                                {
                                    @if (hotel.ContactInfo.Phone != null)
                                    {
                                        <div class="text-dark"><i class="fas fa-phone me-1 text-muted x-small"></i>@hotel.ContactInfo.Phone.Value</div>
                                    }
                                    @if (hotel.ContactInfo.Email != null)
                                    {
                                        <div class="text-muted x-small text-truncate" style="max-width:150px;" title="@hotel.ContactInfo.Email.Value">
                                            <i class="fas fa-envelope me-1"></i>@hotel.ContactInfo.Email.Value
                                        </div>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted x-small">â€”</span>
                                }
                            </td>
                            <td class="pe-4 text-end">
                                <a asp-action="Manage" asp-route-id="@hotel.Id" class="btn btn-sm btn-icon btn-hover-primary" title="Manage Rooms & Details">
                                    <i class="fas fa-tasks text-muted"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-sm btn-icon btn-hover-primary" title="Edit Properties">
                                    <i class="fas fa-edit text-muted"></i>
                                </a>
                                <form asp-action="Delete" asp-route-id="@hotel.Id" method="post" class="d-inline" data-confirm="Hotel @hotel.Name and all its rooms will be deleted. Are you sure?" data-confirm-title="Delete Hotel">
                                    <button type="submit" class="btn btn-sm btn-icon btn-hover-danger" title="Delete">
                                        <i class="fas fa-trash text-muted"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <div class="d-flex flex-column align-items-center">
                                <i class="fas fa-hotel fa-3x text-muted opacity-25 mb-3"></i>
                                <h6 class="text-muted">No hotels found</h6>
                                <p class="text-muted small mb-0">Add your first hotel via the 'Add Hotel' button.</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-white py-3 border-top-0 d-flex justify-content-between align-items-center">
        <span class="text-muted small">Showing @hotelList.Count entries</span>
    </div>
</div>

<style>
    .stat-card {
        background: #fff;
        padding: 1.25rem;
        border-radius: 0.75rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: transform 0.2s;
    }
    .stat-card:hover { transform: translateY(-3px); }
    .stat-header { display: flex; justify-content: space-between; align-items: center; }
    .btn-white {
        background-color: #fff;
        border: 1px solid #e3e6f0;
        color: #6e707e;
    }
    .btn-white:hover { background-color: #f8f9fc; }
    .icon-square { width: 45px; height: 45px; border-radius: 10px; display: flex; align-items: center; justify-content: center; font-size: 16px; }
    .btn-icon { width: 32px; height: 32px; border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; transition: all 0.2s; }
    .btn-hover-primary:hover { background-color: rgba(67, 97, 238, 0.1); color: #4361ee !important; }
    .x-small { font-size: 0.75rem; }
    .bg-primary-light { background-color: rgba(67, 97, 238, 0.1); }
    .bg-success-light { background-color: rgba(25, 135, 84, 0.1); }
    .bg-info-light { background-color: rgba(13, 202, 240, 0.1); }
    .bg-warning-light { background-color: rgba(255, 193, 7, 0.1); }

    .search-group {
        border-radius: 0.375rem;
        transition: box-shadow 0.2s;
    }
    .search-group:focus-within {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25) !important;
        border-color: #86b7fe;
    }
    .search-group .input-group-text { border-color: #dee2e6; }
    .search-group .form-control { border-color: #dee2e6; }
    .search-group .form-control:focus { box-shadow: none; border-color: #dee2e6; }
    .search-group:focus-within .input-group-text,
    .search-group:focus-within .form-control { border-color: #86b7fe; z-index: 2; }
</style>

@section Scripts {
<script>
    function openEditRoomModal(btn) {
        document.getElementById('edit-room-id').value = btn.dataset.id;
        document.getElementById('edit-room-hotel-id').value = btn.dataset.hotelid;
        document.getElementById('edit-room-name').value = btn.dataset.name;
        document.getElementById('edit-room-desc').value = btn.dataset.desc;
        document.getElementById('edit-room-price').value = btn.dataset.price;
        var modal = new bootstrap.Modal(document.getElementById('editRoomModal'));
        modal.show();
    }
</script>
}
