@model IEnumerable<OnlineTravel.Domain.Entities.Flights.Carrier>

@{
    ViewData["Title"] = "Carriers (Airlines)";
}

<div class="row g-3 justify-content-between align-items-center mb-4">
    <div class="col-12 col-lg-auto">
        <h1 class="h3 fw-bold text-dark mb-1">Carriers</h1>
        <p class="text-muted small mb-0">@Model.Count() airlines registered in the system.</p>
    </div>
    <div class="col-12 col-lg-auto d-flex gap-2">
        <a asp-action="Index" class="btn btn-white shadow-sm">
            <i class="fas fa-arrow-left me-2 text-muted"></i>Back to Flights
        </a>
        <a asp-action="CreateCarrier" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus me-2"></i>Add Carrier
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-3">
    @foreach (var carrier in Model)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden h-100">
                <div class="card-body d-flex align-items-start gap-3">
                    @if (!string.IsNullOrEmpty(carrier.Logo))
                    {
                        <img src="@carrier.Logo" alt="@carrier.Name" class="rounded-3" style="width:48px;height:48px;object-fit:contain;" />
                    }
                    else
                    {
                        <div class="bg-primary-light text-primary d-flex align-items-center justify-content-center rounded-3" style="width:48px;height:48px;min-width:48px;">
                            <i class="fas fa-plane"></i>
                        </div>
                    }
                    <div class="flex-grow-1">
                        <h6 class="fw-bold text-dark mb-0">@carrier.Name</h6>
                        <span class="badge bg-primary-light text-primary px-2 py-1 rounded-pill fw-bold x-small mt-1">@carrier.Code?.Value</span>
                        <div class="mt-2">
                            @if (carrier.ContactInfo != null)
                            {
                                if (carrier.ContactInfo.Phone != null)
                                {
                                    <div class="text-muted x-small"><i class="fas fa-phone me-1"></i>@carrier.ContactInfo.Phone</div>
                                }
                                if (carrier.ContactInfo.Email != null)
                                {
                                    <div class="text-muted x-small"><i class="fas fa-envelope me-1"></i>@carrier.ContactInfo.Email</div>
                                }
                            }
                        </div>
                    </div>
                    <div>
                        @if (carrier.IsActive)
                        {
                            <span class="badge bg-success-light text-success px-2 py-1 rounded-pill fw-normal x-small">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger-light text-danger px-2 py-1 rounded-pill fw-normal x-small">Inactive</span>
                        }
                    </div>
                </div>
                <div class="card-footer bg-white border-top d-flex justify-content-end gap-2 py-2">
                    <form asp-action="DeleteCarrier" method="post" class="d-inline" data-confirm="Carrier @carrier.Name will be deleted. Are you sure?" data-confirm-title="Delete Carrier">
                        <input type="hidden" name="id" value="@carrier.Id" />
                        <button type="submit" class="btn btn-sm btn-icon btn-hover-danger" title="Delete">
                            <i class="fas fa-trash text-muted"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="card shadow-sm border-0 rounded-4 overflow-hidden mt-3">
        <div class="card-body text-center py-5">
            <i class="fas fa-plane display-4 text-muted opacity-25"></i>
            <p class="text-muted mt-3">No carriers found. Click <strong>Add Carrier</strong> to register an airline.</p>
        </div>
    </div>
}

<style>
    .btn-white { background-color: #fff; border: 1px solid #e3e6f0; color: #6e707e; }
    .btn-white:hover { background-color: #f8f9fc; }
    .x-small { font-size: 0.75rem; }
    .bg-primary-light { background-color: rgba(78, 115, 223, 0.1); }
    .bg-success-light { background-color: rgba(28, 200, 138, 0.1); }
    .bg-danger-light { background-color: rgba(231, 74, 59, 0.1); }
    .btn-hover-danger:hover i { color: #e74a3b !important; }
</style>
