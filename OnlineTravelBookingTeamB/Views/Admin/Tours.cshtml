@model IEnumerable<OnlineTravel.Application.Features.Tours.GetAllTours.DTOs.TourResponse>

@{
    ViewData["Title"] = "Tours Management";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Tours Management</h1>
    <a asp-controller="Admin" asp-action="CreateTour" class="btn btn-primary">Create New Tour</a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Category</th>
                <th>Price</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tour in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(tour.ImageUrl))
                        {
                            <img src="@tour.ImageUrl" alt="@tour.Title" style="max-width: 100px; max-height: 60px; object-fit: cover;" class="img-thumbnail" />
                        }
                        else
                        {
                            <span class="text-muted">No Image</span>
                        }
                    </td>
                    <td>@tour.Title</td>
                    <td>@tour.Category</td>
                    <td>@tour.Currency @tour.Price</td>
                    <td>
                        @if (tour.Rating > 0)
                        {
                            <span>@tour.Rating.ToString("0.0") <i class="bi bi-star-fill text-warning"></i></span>
                        }
                        else
                        {
                            <span class="text-muted">No Rating</span>
                        }
                    </td>
                    <td>
                        <a href="#" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a href="#" class="btn btn-sm btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No tours found. Get started by creating one!
    </div>
}
