@model CarPricingTierDto
@using OnlineTravel.Application.Features.CarPricingTiers.DTOs

@{
    ViewData["Title"] = "Delete Pricing Tier";
}

<h1>Delete Pricing Tier</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">From Hours</dt>
        <dd class="col-sm-9">@Model.FromHours</dd>

        <dt class="col-sm-3">To Hours</dt>
        <dd class="col-sm-9">@Model.ToHours</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.PricePerHour.Amount @Model.PricePerHour.Currency</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-route-carId="@Model.CarId" class="btn btn-secondary">Back to List</a>
    </form>
</div>