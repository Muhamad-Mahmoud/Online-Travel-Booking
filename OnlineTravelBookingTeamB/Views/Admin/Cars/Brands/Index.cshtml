@using OnlineTravel.Application.Features.CarBrands.Shared.DTOs
@using OnlineTravel.Domain.Exceptions
@model PaginatedResult<CarBrandDto>

@{
    ViewData["Title"] = "Car Brands Fleet";
}

<div class="page-title">
    <span><i class="fas fa-tag me-2 text-primary"></i> Manufacturer Brands</span>
    <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4">
        <i class="fas fa-plus me-2"></i> Add New Brand
    </a>
</div>

<div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
    <div class="card-body p-0">
        <!-- Modern Filters -->
        <div class="p-4 bg-light border-bottom">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group bg-white rounded-pill overflow-hidden border px-3">
                        <span class="input-group-text bg-transparent border-0 text-muted"><i class="fas fa-search"></i></span>
                        <input type="text" name="searchTerm" value="@Context.Request.Query["searchTerm"]" class="form-control border-0 shadow-none" placeholder="Search by manufacturer name..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-dark w-100 rounded-pill">Apply Filter</button>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light small">
                    <tr>
                        <th class="ps-4">Logo</th>
                        <th>Brand Identity</th>
                        <th>Fleet Status</th>
                        <th>Registry Date</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                @if (!string.IsNullOrEmpty(item.Logo))
                                {
                                    <div class="bg-white p-2 rounded-3 border shadow-sm" style="width: fit-content;">
                                        <img src="@item.Logo" alt="@item.Name" style="height: 40px; width: 40px; object-fit: contain;" />
                                    </div>
                                }
                                else
                                {
                                    <div class="bg-light rounded-3 d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                                        <i class="fas fa-car-side text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <div class="fw-bold text-dark">@item.Name</div>
                                <div class="small text-muted">Manufacturer</div>
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-soft-success px-3 py-2 rounded-pill">Active Partner</span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-danger px-3 py-2 rounded-pill">Inactive</span>
                                }
                            </td>
                            <td class="text-muted small">@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-white border-end" title="View Details"><i class="fas fa-eye text-primary"></i></a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-white border-end" title="Edit Brand"><i class="fas fa-edit text-warning"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-white" title="Remove"><i class="fas fa-trash text-danger"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Premium Pagination -->
    <div class="card-footer bg-white py-4 border-top-0 d-flex justify-content-between align-items-center">
        <div class="small text-muted">
            Showing <span class="fw-bold">@Model.Items.Count</span> of <span class="fw-bold">@Model.TotalCount</span> Manufacturers
        </div>
        <nav>
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item @(!Model.HasPrevious ? "disabled" : "")">
                    <a class="page-link rounded-circle me-1 border-0" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)" asp-route-searchTerm="@Context.Request.Query["searchTerm"]">
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link rounded-circle me-1 border-0" asp-action="Index" asp-route-pageIndex="@i" asp-route-searchTerm="@Context.Request.Query["searchTerm"]">@i</a>
                    </li>
                }
                <li class="page-item @(!Model.HasNext ? "disabled" : "")">
                    <a class="page-link rounded-circle border-0" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)" asp-route-searchTerm="@Context.Request.Query["searchTerm"]">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>