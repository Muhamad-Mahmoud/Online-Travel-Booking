@using OnlineTravel.Domain.Enums
@using OnlineTravelBookingTeamB.Models
@model CarIndexViewModel

@{
    ViewData["Title"] = "Cars Management";
}

<h1 class="mb-4">🚗 Cars Management</h1>

<!-- Filter form -->
<form method="get" asp-action="Index" class="row g-3 mb-4">
    <div class="col-md-3">
        <label for="brandId" class="form-label">Brand</label>
        <select name="brandId" id="brandId" class="form-select" asp-items="@(new SelectList(ViewBag.Brands, "Id", "Name", Model.BrandId))">
            <option value="">All Brands</option>
        </select>
    </div>
    <div class="col-md-3">
        <label for="categoryId" class="form-label">Category</label>
        <select name="categoryId" id="categoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories, "Id", "Title", Model.CategoryId))">
            <option value="">All Categories</option>
        </select>
    </div>
    <div class="col-md-2">
        <label for="carType" class="form-label">Car Type</label>
        <select name="selectedCarType" id="carType" class="form-select" asp-items="Html.GetEnumSelectList<CarCategory>()">
            <option value="">All Types</option>
        </select>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <a asp-action="Index" class="btn btn-outline-secondary w-100">Reset</a>
    </div>
</form>

<!-- عرض السيارات -->
@if (Model.Cars != null && Model.Cars.Items.Any())
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var car in Model.Cars.Items)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@(car.MainImage ?? "/images/no-image.jpg")" class="card-img-top" alt="@car.Make @car.Model" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@car.Make @car.Model</h5>
                        <p class="card-text">
                            <strong>Brand:</strong> @car.BrandName<br />
                            <strong>Category:</strong> @car.CategoryTitle<br />
                            <strong>Type:</strong> @car.CarType<br />
                            <strong>Seats:</strong> @car.SeatsCount<br />
                            <strong>Fuel:</strong> @car.FuelType<br />
                            <strong>Transmission:</strong> @car.Transmission<br />
                            <strong class="text-primary">Price/Hour:</strong> @car.PricePerHour.ToString("C")
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-sm btn-outline-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex - 1)" asp-route-brandId="@Model.BrandId" asp-route-categoryId="@Model.CategoryId" asp-route-selectedCarType="@Model.CarType">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageIndex="@i" asp-route-brandId="@Model.BrandId" asp-route-categoryId="@Model.CategoryId" asp-route-selectedCarType="@Model.CarType">@i</a>
                </li>
            }
            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageIndex="@(Model.PageIndex + 1)" asp-route-brandId="@Model.BrandId" asp-route-categoryId="@Model.CategoryId" asp-route-selectedCarType="@Model.CarType">Next</a>
            </li>
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info">No cars found.</div>
}