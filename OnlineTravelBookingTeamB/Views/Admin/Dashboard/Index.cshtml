@model OnlineTravelBookingTeamB.Models.DashboardViewModel
@{
    ViewData["Title"] = "Command Center";
}

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="h3 fw-bold text-gray-800 mb-1">Dashboard</h1>
        <p class="text-muted mb-0">Overview of system performance and metrics.</p>
    </div>
    <div>
        <button class="btn btn-secondary btn-sm shadow-sm me-2"><i class="bi bi-download me-2"></i> Generate Report</button>
        <button class="btn btn-primary btn-sm shadow-sm"><i class="bi bi-plus mt-1"></i> Add Widget</button>
    </div>
</div>

<!-- Stats Row -->
<div class="row g-4 mb-5">
    <div class="col-xl-3 col-md-6">
        <div class="card h-100 border-start border-4 border-primary shadow-sm py-2">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">Total Tours</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.TotalTours</div>
                    </div>
                    <div class="col-auto">
                        <div class="icon-circle bg-primary bg-opacity-10 text-primary p-3 rounded-circle">
                            <i class="bi bi-map fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card h-100 border-start border-4 border-success shadow-sm py-2">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-success text-uppercase mb-1">Revenue (Monthly)</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">$@Model.TotalRevenue.ToString("N0")</div>
                    </div>
                    <div class="col-auto">
                        <div class="icon-circle bg-success bg-opacity-10 text-success p-3 rounded-circle">
                            <i class="bi bi-currency-dollar fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card h-100 border-start border-4 border-info shadow-sm py-2">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-info text-uppercase mb-1">Active Bookings</div>
                         <div class="h5 mb-0 fw-bold text-gray-800">@Model.ActiveBookings</div>
                    </div>
                    <div class="col-auto">
                        <div class="icon-circle bg-info bg-opacity-10 text-info p-3 rounded-circle">
                            <i class="bi bi-calendar-check fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card h-100 border-start border-4 border-warning shadow-sm py-2">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">New Users</div>
                        <div class="h5 mb-0 fw-bold text-gray-800">@Model.NewUsersToday</div>
                    </div>
                    <div class="col-auto">
                        <div class="icon-circle bg-warning bg-opacity-10 text-warning p-3 rounded-circle">
                            <i class="bi bi-people fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Main Content Column -->
    <div class="col-lg-8 mb-4">
        <!-- Project Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 fw-bold text-primary">System Overview</h6>
            </div>
            <div class="card-body">
                <h4 class="small fw-bold">Server Migration <span class="float-end">20%</span></h4>
                <div class="progress mb-4" style="height: 0.5rem;">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small fw-bold">Sales Tracking <span class="float-end">40%</span></h4>
                <div class="progress mb-4" style="height: 0.5rem;">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small fw-bold">Customer Database <span class="float-end">60%</span></h4>
                <div class="progress mb-4" style="height: 0.5rem;">
                    <div class="progress-bar" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small fw-bold">Payout Details <span class="float-end">80%</span></h4>
                <div class="progress mb-4" style="height: 0.5rem;">
                    <div class="progress-bar bg-info" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small fw-bold">Account Setup <span class="float-end">Complete!</span></h4>
                <div class="progress" style="height: 0.5rem;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card bg-primary text-white shadow">
                    <div class="card-body">
                        Primary
                        <div class="text-white-50 small">#4e73df</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="card bg-success text-white shadow">
                    <div class="card-body">
                        Success
                        <div class="text-white-50 small">#1cc88a</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column -->
    <div class="col-lg-4 mb-4">
        <!-- Quick Actions -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 fw-bold text-primary">Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="CreateTour" class="btn btn-primary d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-plus-circle me-2"></i> New Tour</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a href="#" class="btn btn-info text-white d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-tag me-2"></i> Manage Discounts</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                    <a href="#" class="btn btn-warning text-white d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-envelope me-2"></i> Support Tickets</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 fw-bold text-primary">Recent Activity</h6>
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    @foreach (var activity in Model.RecentActivities)
                    {
                        <li class="list-group-item d-flex align-items-center p-3">
                            <div class="me-3">
                                <div class="icon-circle bg-@activity.Status bg-opacity-10 text-@activity.Status p-2 rounded-circle">
                                    <i class="bi @activity.Icon"></i>
                                </div>
                            </div>
                            <div>
                                <div class="small text-gray-500">@activity.TimeAgo</div>
                                <span class="fw-bold d-block">@activity.Title</span>
                                <small class="text-muted">@activity.Description</small>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
