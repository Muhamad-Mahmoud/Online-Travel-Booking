@using OnlineTravel.Application.Features.CarBrands.Shared.DTOs
@using OnlineTravel.Domain.Exceptions
@model PaginatedResult<CarBrandDto>

@{
    ViewData["Title"] = "Car Brands Fleet";
    var search = Context.Request.Query["searchTerm"];
}

<div class="container-fluid py-4">
    <!-- Authority Header -->
    <partial name="_AdminPageHeader" model='new AdminPageHeaderViewModel {
        Title = "Manufacturer",
        TitleSuffix = "Brands",
        IconClass = "fas fa-tags",
        IconBgClass = "bg-dark",
        StatusText = "VERIFIED REGISTRY",
        StatusIconClass = "fas fa-certificate",
        BadgeText = $"TOTAL: {Model.TotalCount} LABELS",
        Breadcrumbs = new List<BreadcrumbItem> {
            new BreadcrumbItem { Text = "Cars", Controller = "Cars", Action = "Index" },
            new BreadcrumbItem { Text = "Manufacturers", IsActive = true }
        },
        ShowSearch = false,
        ActionButtons = new List<ActionButtonViewModel> {
            new ActionButtonViewModel { 
                Text = "New Brand", 
                IconClass = "fas fa-plus-circle", 
                Action = "Create", 
                Class = "btn-premium-dark" 
            }
        }
    }' />

<div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
    <div class="card-body p-0">
        <!-- Modern Filters -->
        <div class="p-4 bg-white border-bottom">
            <form asp-action="Index" method="get" class="row g-3 align-items-center">
                <div class="col-md-6 col-lg-4">
                    <div class="input-group shadow-sm search-group">
                        <span class="input-group-text bg-white border-end-0 text-muted"><i class="fas fa-search"></i></span>
                        <input type="text" name="searchTerm" value="@Context.Request.Query["searchTerm"]" class="form-control border-start-0 ps-0" placeholder="Search by name..." />
                    </div>
                </div>
                <div class="col-md-auto">
                    <button type="submit" class="btn btn-primary shadow-sm px-4">Apply Filter</button>
                    <a asp-action="Index" class="btn btn-white shadow-sm" title="Clear Filters"><i class="fas fa-undo text-muted"></i></a>
                </div>
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light small">
                    <tr>
                        <th class="ps-4">Logo</th>
                        <th>Brand Identity</th>
                        <th>Fleet Status</th>
                        <th>Registry Date</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="ps-4 py-3">
                                @if (!string.IsNullOrEmpty(item.Logo))
                                {
                                    <div class="bg-white p-2 rounded-3 border shadow-sm" style="width: fit-content;">
                                        <img src="@item.Logo" alt="@item.Name" class="admin-thumb-40 admin-logo-contain" />
                                    </div>
                                }
                                else
                                {
                                    <div class="bg-light rounded-3 d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                                        <i class="fas fa-car-side text-muted"></i>
                                    </div>
                                }
                            </td>
                            <td>
                                <div class="fw-bold text-dark">@item.Name</div>
                                <div class="small text-muted">Manufacturer</div>
                            </td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-soft-success px-3 py-2 rounded-pill">Active Partner</span>
                                }
                                else
                                {
                                    <span class="badge bg-soft-danger px-3 py-2 rounded-pill">Inactive</span>
                                }
                            </td>
                            <td class="text-muted small">@item.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td class="text-end pe-4">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-icon-soft btn-soft-primary" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-icon-soft btn-soft-primary" title="Edit Brand">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-icon-soft btn-soft-danger" title="Remove">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <!-- Premium Pagination -->
    <div class="card-footer bg-white p-3 border-top d-flex justify-content-between align-items-center">
        <div class="small text-muted">
            Showing <span class="fw-bold">@Model.Items.Count</span> of <span class="fw-bold">@Model.TotalCount</span> Manufacturers
        </div>
        @if (Model.TotalPages >= 1)
        {
            <partial name="_Pagination" model="@PaginationViewModel.Create(Model, "Index", "CarBrands", new { searchTerm = search })" />
        }
    </div>
</div>
