@using OnlineTravel.Application.Features.CarPricingTiers.GetCarPricingTiersById
@model GetCarPricingTierByIdResponse

@{
    ViewData["Title"] = "Pricing Tier Details";
}

<div class="page-title d-flex justify-content-between align-items-center">
    <span><i class="fas fa-tags me-2 text-primary"></i> Pricing Tier Details</span>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning shadow-sm rounded-pill px-4 me-2">
            <i class="fas fa-edit me-2"></i> Edit Tier
        </a>
        <a asp-action="Index" asp-route-carId="@Model.CarId" class="btn btn-light shadow-sm rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i> Back to List
        </a>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
                    <div>
                        <h3 class="fw-bold text-dark mb-1">Hourly Pricing Window</h3>
                        <span class="text-muted small">Configured range and value for this tier</span>
                    </div>
                    <div class="badge bg-primary-light text-primary rounded-pill px-3 py-2 fw-bold">
                        @Model.FromHours - @Model.ToHours Hours
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="data-box">
                            <label class="x-small text-muted fw-bold text-uppercase mb-1">From Hours</label>
                            <div class="h5 fw-bold text-dark mb-0">@Model.FromHours</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="data-box">
                            <label class="x-small text-muted fw-bold text-uppercase mb-1">To Hours</label>
                            <div class="h5 fw-bold text-dark mb-0">@Model.ToHours</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="data-box">
                            <label class="x-small text-muted fw-bold text-uppercase mb-1">Amount</label>
                            <div class="h5 fw-bold text-primary mb-0">@Model.PricePerHour.Amount.ToString("N2")</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="data-box">
                            <label class="x-small text-muted fw-bold text-uppercase mb-1">Currency</label>
                            <div class="h5 fw-bold text-dark mb-0">@Model.PricePerHour.Currency</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-header bg-transparent border-bottom py-3">
                <h6 class="m-0 fw-bold text-dark">Quick Actions</h6>
            </div>
            <div class="card-body p-4 d-grid gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-3 fw-bold">
                    <i class="fas fa-pen me-2"></i> Edit Tier
                </a>
                <a asp-action="Index" asp-route-carId="@Model.CarId" class="btn btn-light rounded-3 fw-bold border">
                    <i class="fas fa-list me-2"></i> Back to Tiers
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .data-box {
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 12px 14px;
        background: #fff;
        height: 100%;
    }
</style>
