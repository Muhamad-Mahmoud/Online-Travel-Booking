@using OnlineTravel.Application.Features.CarBrands.UpdateCarBrand
@model OnlineTravel.Mvc.Models.BrandEditViewModel
@{
    ViewData["Title"] = "Edit Car Brand";
}

<div class="page-title d-flex justify-content-between align-items-center">
    <span><i class="fas fa-edit me-2 text-warning"></i> Edit Car Brand</span>
    <a asp-action="Index" class="btn btn-light shadow-sm rounded-pill px-4">
        <i class="fas fa-arrow-left me-2"></i> Back to List
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm rounded-4" role="alert">
        <i class="fas fa-triangle-exclamation me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="m-0 fw-bold text-dark"><i class="fas fa-industry text-primary me-2"></i>Brand Configuration</h6>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 rounded-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold small text-uppercase text-muted"></label>
                        <input asp-for="Name" class="form-control form-control-lg rounded-3" placeholder="e.g. Tesla" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LogoFile" class="form-label fw-bold small text-uppercase text-muted">Brand Logo</label>
                        @if (!string.IsNullOrEmpty(Model.Logo))
                        {
                            <div class="mb-2">
                                <img src="@Model.Logo" alt="Current Logo" class="admin-thumb-40 admin-logo-contain border rounded p-1" />
                                <span class="small text-muted ms-2">Current Logo</span>
                            </div>
                        }
                        <input type="hidden" asp-for="Logo" />
                        <div class="premium-file-upload">
                            <input asp-for="LogoFile" class="form-control" type="file" accept="image/*" />
                        </div>
                        <span asp-validation-for="LogoFile" class="text-danger small"></span>
                    </div>

                    <div class="form-check form-switch mb-4">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label fw-semibold text-dark"></label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning px-4 rounded-3 fw-bold text-dark">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-light border px-4 rounded-3 fw-bold">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm rounded-4 h-100">
            <div class="card-header bg-white py-3 border-bottom">
                <h6 class="m-0 fw-bold text-dark"><i class="fas fa-lightbulb text-warning me-2"></i>Tips</h6>
            </div>
            <div class="card-body p-4">
                <p class="small text-muted mb-2"><i class="fas fa-check-circle text-success me-2"></i>Use the official brand name as displayed to users.</p>
                <p class="small text-muted mb-2"><i class="fas fa-check-circle text-success me-2"></i>Keep logo URL stable and lightweight.</p>
                <p class="small text-muted mb-0"><i class="fas fa-check-circle text-success me-2"></i>Disable inactive brands instead of deleting them immediately.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
