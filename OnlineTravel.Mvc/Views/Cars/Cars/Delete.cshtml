@using OnlineTravel.Application.Features.Cars.Shared
@model CarDetailsResponse


@{
    ViewData["Title"] = "Delete Car";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-6 col-md-8">
        <div class="card border-0 shadow rounded-4 overflow-hidden">
            <div class="card-header bg-danger text-white py-3 border-bottom-0 d-flex align-items-center">
                <i class="fas fa-exclamation-triangle fs-4 me-3"></i>
                <h5 class="mb-0 fw-bold">Critical Action: Delete Car</h5>
            </div>
            <div class="card-body p-4 bg-white">
                <div class="text-center mb-4">
                    <h4 class="text-dark fw-bold mb-2">@Model.Make @Model.Model</h4>
                    <p class="text-muted small">Are you absolutely sure you want to permanently delete this vehicle from the fleet inventory?</p>
                </div>
                
                <div class="bg-light rounded-3 p-3 mb-4 border border-danger border-opacity-25">
                    <div class="row g-2 small">
                        <div class="col-6">
                            <span class="text-muted fw-bold d-block">BRAND</span>
                            <span class="text-dark">@Model.BrandName</span>
                        </div>
                        <div class="col-6">
                            <span class="text-muted fw-bold d-block">CATEGORY</span>
                            <span class="text-dark">@Model.CategoryTitle</span>
                        </div>
                    </div>
                </div>

                <div class="alert alert-warning border-0 bg-warning bg-opacity-10 text-warning-emphasis small py-2 px-3 rounded-3 d-flex align-items-center mb-0">
                    <i class="fas fa-info-circle me-2 flex-shrink-0"></i>
                    <div>This action cannot be undone. Associated bookings may be affected.</div>
                </div>
            </div>
            <div class="card-footer bg-white p-4 border-top d-flex gap-2 justify-content-end">
                <a asp-action="Index" class="btn btn-light fw-bold px-4">Cancel</a>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger fw-bold shadow-sm px-4">
                        <i class="fas fa-trash-alt me-2"></i>Confirm Deletion
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

