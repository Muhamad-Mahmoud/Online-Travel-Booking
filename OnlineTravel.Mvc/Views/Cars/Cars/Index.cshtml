@using OnlineTravel.Application.Features.Cars.GetAllCarsSummary
@using OnlineTravel.Domain.Enums
@using OnlineTravel.Application.Features.CarBrands.Shared.DTOs
@using OnlineTravel.Application.Features.Categories.Shared.DTOs
@model OnlineTravel.Domain.Exceptions.PaginatedResult<CarSummaryDto>
@{
    ViewData["Title"] = "Car Fleet";
    var search = ViewBag.SearchTerm as string;
    var brands = ViewBag.Brands as List<CarBrandDto> ?? new List<CarBrandDto>();
    var categories = ViewBag.Categories as List<CategoryDto> ?? new List<CategoryDto>();
}

<div class="container-fluid py-4">
    <!-- Authority Header -->
    <partial name="_AdminPageHeader" model='new AdminPageHeaderViewModel {
        Title = "Car",
        TitleSuffix = "Fleet",
        IconClass = "fas fa-car",
        IconBgClass = "bg-dark",
        StatusText = "LOGISTICS ACTIVE",
        BadgeText = $"TOTAL: {Model.TotalCount} ASSETS",
        Breadcrumbs = new List<BreadcrumbItem> {
            new BreadcrumbItem { Text = "Cars", IsActive = true }
        },
        ShowSearch = true,
        SearchInputName = "searchTerm",
        SearchValue = search,
        SearchPlaceholder = "Search cars...",
        ShowStatusFilter = true,
        StatusFilterName = "brandId",
        StatusFilterPlaceholder = "All Brands",
        StatusOptions = brands.Select(b => new StatusOption { 
            Text = b.Name, 
            Value = b.Id.ToString(), 
            Selected = b.Id.ToString() == ViewBag.BrandId?.ToString() 
        }).ToList(),
        ActionButtons = new List<ActionButtonViewModel> {
            new ActionButtonViewModel { 
                Text = "New Vehicle", 
                IconClass = "fas fa-plus", 
                Action = "Create", 
                Class = "btn-premium-dark" 
            }
        }
    }' />

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Total Vehicles",
                Value = Model.TotalCount.ToString(),
                IconClass = "fas fa-car-side",
                IconBgClass = "bg-primary-light",
                IconTextClass = "text-primary"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Active Brands",
                Value = brands.Count.ToString(),
                IconClass = "fas fa-tags",
                IconBgClass = "bg-success-light",
                IconTextClass = "text-success"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Categories",
                Value = categories.Count.ToString(),
                IconClass = "fas fa-layer-group",
                IconBgClass = "bg-warning-light",
                IconTextClass = "text-warning"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Electric Ready",
                Value = Model.Items.Count(c => c.FuelType == FuelType.Electric).ToString(),
                IconClass = "fas fa-gas-pump",
                IconBgClass = "bg-danger-light",
                IconTextClass = "text-danger"
            }' />
        </div>
    </div>

    <!-- Cars Table -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white p-4 border-bottom-light d-flex justify-content-between align-items-center">
            <h6 class="fw-black mb-0 text-dark">Vehicle Registry</h6>
            <span class="badge bg-primary-light text-primary rounded-pill px-3 fw-bold x-small">@Model.TotalCount Records</span>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light x-small text-uppercase fw-black text-muted">
                    <tr>
                        <th class="ps-4 py-3">Vehicle</th>
                        <th class="text-center d-none d-sm-table-cell">Specs</th>
                        <th class="text-center d-none d-md-table-cell">Category</th>
                        <th class="text-center">Rate</th>
                        <th class="pe-4"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-car fa-3x opacity-25 mb-3 d-block"></i>
                                <div class="fw-bold">No vehicles found</div>
                                <div class="x-small mt-1">@(string.IsNullOrEmpty(search) ? "Start by adding your first vehicle." : $"No results for \"{search}\"")</div>
                            </td>
                        </tr>
                    }
                    @foreach (var car in Model.Items)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center gap-3">
                                    @if (!string.IsNullOrEmpty(car.MainImage))
                                    {
                                        <img src="@car.MainImage" alt="@car.Model" class="rounded-3 shadow-sm admin-thumb-48" />
                                    }
                                    else
                                    {
                                        <div class="icon-square bg-primary-light text-primary rounded-3" style="width:48px;height:48px;">
                                            <i class="fas fa-car"></i>
                                        </div>
                                    }
                                    <div>
                                        <div class="fw-black text-dark small">@car.Make @car.Model</div>
                                        <div class="x-small text-muted">@car.BrandName</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center d-none d-sm-table-cell">
                                <div class="d-flex flex-column align-items-center">
                                    <div class="x-small fw-bold text-dark">
                                        <i class="fas fa-users me-1 text-muted"></i> @car.SeatsCount Seats
                                    </div>
                                    <div class="x-small text-muted mt-1">
                                        @car.FuelType | @car.Transmission
                                    </div>
                                </div>
                            </td>
                            <td class="text-center d-none d-md-table-cell">
                                @{
                                    var typeClass = car.CarType.ToString().ToLower() switch {
                                        "sedan" => "badge-sedan",
                                        "suv" => "badge-suv",
                                        "luxury" => "badge-luxury",
                                        "electric" => "badge-electric",
                                        _ => "bg-light text-dark"
                                    };
                                }
                                <span class="badge @typeClass px-3 py-2 rounded-pill fw-bold x-small">@car.CarType</span>
                            </td>
                            <td class="text-center">
                                <div class="fw-black text-primary small">@car.PricePerHour.ToString("C2")</div>
                                <div class="x-small text-muted">per hour</div>
                            </td>
                            <td class="pe-4">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-icon-soft btn-soft-primary" title="Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-icon-soft btn-soft-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@car.Id" method="get" class="d-inline" data-confirm="This vehicle will be permanently removed. Are you sure?" data-confirm-title="Remove Vehicle">
                                        <button type="submit" class="btn btn-icon-soft btn-soft-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages >= 1)
        {
            <div class="card-footer bg-white border-top p-3 text-center">
                <partial name="_Pagination" model='@(PaginationViewModel.Create(Model, "Index", "Cars", new { searchTerm = search, brandId = (object)ViewBag.BrandId }))' />
            </div>
        }
    </div>
</div>
