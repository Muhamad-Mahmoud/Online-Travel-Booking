@model OnlineTravel.Mvc.Models.TourDto

@{
    ViewData["Title"] = "Delete Tour";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-0 shadow-lg rounded-4 overflow-hidden mt-4">
            <!-- Header section -->
            <div class="card-header bg-danger text-white py-4 border-0 position-relative text-center">
                <div class="position-absolute top-50 start-50 translate-middle opacity-10" style="font-size: 8rem;">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="position-relative z-1">
                    <div class="icon-circle bg-white text-danger mx-auto mb-3" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">
                        <i class="fas fa-trash-alt"></i>
                    </div>
                    <h3 class="fw-bold mb-1">Delete Mission Node</h3>
                    <p class="mb-0 opacity-75">This action is irreversible and will permanently purge all related data.</p>
                </div>
            </div>

            <!-- Content section -->
            <div class="card-body p-4 p-md-5 bg-white text-center">
                <h5 class="text-dark mb-4">Are you absolutely sure you want to delete this tour?</h5>

                <div class="bg-light rounded-4 p-4 text-start mb-4 border border-danger border-opacity-25 relative overflow-hidden">
                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-danger opacity-10 z-0"></div>
                    <div class="position-relative z-1 d-flex flex-column gap-3">
                        <div class="d-flex align-items-center">
                            <div class="icon-square bg-white text-danger shadow-sm me-3 flex-shrink-0 rounded-3 text-center" style="width: 48px; height: 48px; line-height: 48px;">
                                <i class="fas fa-fingerprint"></i>
                            </div>
                            <div>
                                <small class="text-uppercase text-muted fw-bold d-block" style="font-size: 0.7rem; letter-spacing: 0.05em;">Tour ID</small>
                                <strong class="text-danger d-block text-break font-monospace small">@Model.Id</strong>
                            </div>
                        </div>

                        <div class="d-flex align-items-center mt-2">
                            <div class="icon-square bg-white text-danger shadow-sm me-3 flex-shrink-0 rounded-3 text-center" style="width: 48px; height: 48px; line-height: 48px;">
                                <i class="fas fa-map-marked-alt"></i>
                            </div>
                            <div>
                                <small class="text-uppercase text-muted fw-bold d-block" style="font-size: 0.7rem; letter-spacing: 0.05em;">Designator</small>
                                <strong class="text-dark d-block">@Model.Title</strong>
                            </div>
                        </div>
                        
                        <div class="d-flex align-items-center mt-2">
                            <div class="icon-square bg-white text-danger shadow-sm me-3 flex-shrink-0 rounded-3 text-center" style="width: 48px; height: 48px; line-height: 48px;">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div>
                                <small class="text-uppercase text-muted fw-bold d-block" style="font-size: 0.7rem; letter-spacing: 0.05em;">Classification</small>
                                <strong class="text-muted d-block small">@Model.Category</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="alert alert-warning border-0 small text-start d-flex">
                    <i class="fas fa-info-circle me-3 mt-1 text-warning fs-5"></i>
                    <div>
                        <strong>Warning:</strong> Deleting this tour will automatically cascade and orchestrate the deletion of its associated prices, daily itinerary schedules, activities, and commercial gallery configurations.
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-3 justify-content-center">
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 fw-bold text-uppercase" style="letter-spacing: 0.5px; border-radius: 8px;">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-danger px-4 py-2 fw-bold text-uppercase shadow-sm" style="letter-spacing: 0.5px; border-radius: 8px;">
                            <i class="fas fa-skull-crossbones me-2"></i> Confirm Purge
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
