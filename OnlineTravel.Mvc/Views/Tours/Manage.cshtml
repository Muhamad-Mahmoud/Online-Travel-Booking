@model ToursManageViewModel
@{
    ViewData["Title"] = $"Tour Admin - {Model.Tour.Title}";
    var tour = Model.Tour;
}

<div class="container-fluid py-4 tour-admin-portal">
    <!-- Authority Header -->
    <div class="row g-3 justify-content-between align-items-center mb-4 px-2">
        <div class="col-12 col-lg-auto">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1 text-uppercase ls-md x-small fw-bold opacity-50">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index" class="text-decoration-none text-muted small">Admin</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none text-muted small">Tours</a></li>
                    <li class="breadcrumb-item active small">@tour.Title</li>
                </ol>
            </nav>
            <div class="d-flex align-items-center gap-3">
                <div class="authority-icon-box bg-success text-white rounded-3 shadow-sm">
                    <i class="fas fa-map-marked-alt"></i>
                </div>
                <div>
                    <h1 class="h2 fw-black text-dark mb-0 tracking-tight">@tour.Title</h1>
                    <div class="d-flex align-items-center gap-2 mt-1">
                        <span class="status-pill status-operational">
                            <i class="fas fa-circle-notch fa-spin me-1"></i> OPERATIONAL
                        </span>
                        <span class="asset-id-tag">REF: @tour.Id.ToString().ToUpper().Substring(0,8)</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-auto">
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-premium-white shadow-sm">
                    <i class="fas fa-arrow-left me-2 text-muted"></i> Tour Fleet
                </a>
                <button class="btn btn-premium-dark shadow-sm" data-bs-toggle="collapse" data-bs-target="#editTourSection">
                    <i class="fas fa-sliders-h me-2"></i> Mission Control
                </button>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-premium-success border-0 shadow-sm rounded-4 mb-4 d-flex align-items-center p-3 animate__animated animate__slideInDown">
            <div class="icon-square bg-success text-white me-3 rounded-circle" style="width: 38px; height: 38px;">
                <i class="fas fa-check"></i>
            </div>
            <div class="fw-bold">@TempData["Success"]</div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Mission Master Card (Ultra Premium) -->
    <div class="card border-0 shadow-2xl rounded-5 overflow-hidden mb-5 master-property-card tour-hero-card">
        <div class="card-body p-0">
            <div class="row g-0 tour-hero-row">
                <div class="col-lg-4 position-relative overflow-hidden tour-hero-media">
                    <img src="/@(tour.MainImageUrl ?? "images/placeholder-tour.jpg")" class="w-100 object-fit-cover property-hero-img tour-hero-img">
                    <div class="image-overlay-premium"></div>
                    <div class="position-absolute bottom-0 start-0 p-4 text-white z-2">
                        <span class="badge glass-badge rounded-pill px-3 py-1 x-small fw-black mb-2 ls-lg">PRIMARY HUB</span>
                        <h3 class="fw-black mb-0 text-shadow tracking-tight">Adventure Canvas</h3>
                        <p class="x-small opacity-75 fw-bold mb-0">High-Resolution Visual Mission Asset</p>
                    </div>
                </div>
                <div class="col-lg-8 bg-premium-dark text-white p-4 d-flex flex-column justify-content-center position-relative">
                    <div class="row g-3 position-relative z-2">
                        <div class="col-md-6 border-start-premium">
                            <div class="d-flex justify-content-between align-items-end mb-1">
                                <p class="text-uppercase ls-lg x-small opacity-50 fw-black mb-0">Engagement Depth</p>
                                <span class="x-small fw-bold text-primary">@tour.DurationDays Days / @tour.DurationNights Nights</span>
                            </div>
                            <h2 class="h1 fw-black mb-0">@tour.Activities?.Count <span class="fs-5 opacity-50 fw-normal">Nodes</span></h2>
                        </div>
                        <div class="col-md-6 border-start-premium">
                            <p class="text-uppercase ls-lg x-small opacity-50 fw-black mb-1">Feedback Score</p>
                            <h2 class="h1 fw-black mb-0">@tour.Rating.ToString("0.0") <span class="fs-5 opacity-50 fw-normal">Avg</span></h2>
                            <div class="d-flex align-items-center gap-2 mt-2">
                                <div class="d-flex gap-1 text-warning x-small">
                                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                                </div>
                                <span class="badge bg-white bg-opacity-10 rounded-pill x-small fw-bold py-1"><i class="fas fa-arrow-up me-1 text-success"></i>+5.2%</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4 d-flex flex-wrap gap-2 position-relative z-2">
                         <div class="glass-pill-premium">
                             <div class="pill-icon"><i class="fas fa-map-marker-alt"></i></div>
                             <span>@tour.Location?.City, @tour.Location?.Country</span>
                         </div>
                         <div class="glass-pill-premium active">
                             <div class="pill-icon"><i class="fas fa-tag"></i></div>
                             <span>@tour.Category Adventure</span>
                         </div>
                         @if (tour.Recommended) {
                            <div class="glass-pill-premium status-recommended">
                                <div class="pill-icon text-warning"><i class="fas fa-crown"></i></div>
                                <span class="text-warning fw-black">ELITE STATUS</span>
                            </div>
                         }
                    </div>

                    <!-- Subtle Decorative Glow Background -->
                    <div class="decorative-glow"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Deck -->
    <div class="row g-4">
        <div class="col-lg-8">
            <!-- Edit Panel (Collapsed) -->
            <div class="collapse mb-4" id="editTourSection">
                <div class="card border-0 shadow-sm rounded-4 bg-white p-4 border-top border-4 border-primary">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="fw-black mb-0 text-dark"><i class="fas fa-sliders-h me-2 text-primary"></i>Operational Configuration</h5>
                        <span class="x-small fw-bold text-muted text-uppercase ls-md">SYNC STATUS: NOMINAL</span>
                    </div>
                    <form asp-action="Update" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="EditForm.TourId" value="@tour.Id" />
                        <input type="hidden" asp-for="EditForm.CurrentImageUrl" value="@tour.MainImageUrl" />
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="EditForm.Title" class="form-label small fw-bold text-muted text-uppercase">MISSION DESIGNATOR</label>
                                <input asp-for="EditForm.Title" class="form-control border-0 bg-light rounded-3" value="@tour.Title" />
                                <span asp-validation-for="EditForm.Title" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="EditForm.Description" class="form-label small fw-bold text-muted text-uppercase">MISSION BRIEFING</label>
                                <textarea asp-for="EditForm.Description" class="form-control border-0 bg-light rounded-3" rows="3">@tour.Description</textarea>
                                <span asp-validation-for="EditForm.Description" class="text-danger small"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="EditForm.ImageFile" class="form-label small fw-bold text-muted text-uppercase">REPLACE HERO IMAGE</label>
                                <input asp-for="EditForm.ImageFile" type="file" class="form-control border-0 bg-light rounded-3" accept="image/*" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EditForm.DurationDays" class="form-label small fw-bold text-muted text-uppercase">DURATION (DAYS)</label>
                                <input asp-for="EditForm.DurationDays" type="number" class="form-control border-0 bg-light rounded-3" value="@tour.DurationDays" />
                                <span asp-validation-for="EditForm.DurationDays" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EditForm.DurationNights" class="form-label small fw-bold text-muted text-uppercase">DURATION (NIGHTS)</label>
                                <input asp-for="EditForm.DurationNights" type="number" class="form-control border-0 bg-light rounded-3" value="@tour.DurationNights" />
                                <span asp-validation-for="EditForm.DurationNights" class="text-danger small"></span>
                            </div>
                            <div class="col-12 text-end pt-3">
                                <button type="button" class="btn btn-outline-secondary border-0 fw-bold px-4 me-2" data-bs-toggle="collapse" data-bs-target="#editTourSection">Discard</button>
                                <button type="submit" class="btn btn-primary px-4 rounded-3 shadow-sm"><i class="fas fa-save me-2"></i>Commit Mission Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Visual Itinerary -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                <div class="card-header bg-white p-4 border-bottom-light d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-black mb-0 text-dark ls-tight">Itinerary Journey</h5>
                        <p class="text-muted x-small fw-bold mb-0 opacity-75 text-uppercase ls-sm">Sequential mission nodes and exploration nodes.</p>
                    </div>
                    <button class="btn btn-premium-dark btn-sm px-3" data-bs-toggle="modal" data-bs-target="#addActivityModal">
                        <i class="fas fa-plus-circle me-1"></i> Add Adventure Node
                    </button>
                </div>
                <div class="card-body p-4">
                    <div class="itinerary-timeline mt-2">
                        @if (tour.Activities != null && tour.Activities.Any())
                        {
                            @foreach (var activity in tour.Activities)
                            {
                                <div class="timeline-item pb-5 position-relative">
                                    <div class="timeline-marker bg-primary shadow-sm"></div>
                                    <div class="card border-0 shadow-sm rounded-4 h-100 hover-lift bg-soft-light overflow-hidden">
                                        <div class="row g-0 align-items-center">
                                            <div class="col-auto">
                                                <div class="p-3">
                                                    @if (!string.IsNullOrEmpty(activity.ImageUrl))
                                                    {
                                                        <img src="/@activity.ImageUrl" class="rounded-3 shadow-sm object-fit-cover admin-thumb-80" />
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-white rounded-3 d-flex align-items-center justify-content-center border" style="width: 80px; height: 80px;">
                                                            <i class="fas fa-camera text-muted opacity-25"></i>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col">
                                                <div class="p-3 ps-0">
                                                    <h6 class="fw-bold mb-1 text-dark">@activity.Title</h6>
                                                    <p class="text-muted small mb-0 line-clamp-2">@activity.Description</p>
                                                </div>
                                            </div>
                                            <div class="col-auto pe-4">
                                                <div class="dropdown">
                                                    <button class="btn btn-icon-soft" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></button>
                                                    <ul class="dropdown-menu dropdown-menu-end border-0 shadow-sm rounded-3">
                                                        <li><a class="dropdown-item small py-2" href="#"><i class="fas fa-edit me-2 opacity-50"></i>Edit</a></li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li><a class="dropdown-item small text-danger py-2" href="#"><i class="fas fa-trash-alt me-2 opacity-50"></i>Remove Node</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted border border-dashed rounded-4 bg-soft-light">
                                <div class="mb-3 opacity-25">
                                    <i class="fas fa-hiking fa-3x"></i>
                                </div>
                                <h6 class="fw-bold text-dark">No activities scheduled</h6>
                                <p class="small mb-0">Start building the journey by adding your first mission activity.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Commercial Inventory Hub -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                <div class="card-header bg-white p-4 border-bottom-light d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="fw-black mb-0 text-dark ls-tight">Commercial Inventory Hub</h5>
                        <p class="text-muted x-small fw-bold mb-0 opacity-75 text-uppercase ls-sm">Manage availability levels and price points.</p>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        @if (tour.PriceTiers != null && tour.PriceTiers.Any())
                        {
                            @foreach (var tier in tour.PriceTiers)
                            {
                                <div class="col-md-6 col-xl-4">
                                    <div class="tier-card p-4 rounded-4 border-0 shadow-sm bg-soft-light position-relative overflow-hidden hover-lift">
                                        <div class="badge bg-soft-primary text-primary rounded-pill px-3 mb-3 fw-bold x-small">@tier.Name.ToUpper()</div>
                                        <div class="d-flex align-items-baseline gap-1">
                                            <span class="h2 fw-black text-dark mb-0">$@tier.Price.ToString("N0")</span>
                                            <span class="text-muted x-small fw-bold">/ PP</span>
                                        </div>
                                        <hr class="my-3 opacity-10">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="x-small fw-bold text-muted">TIER STATUS</span>
                                            <span class="badge bg-success rounded-circle p-1"><i class="fas fa-check text-white" style="font-size: 8px;"></i></span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        <div class="col-md-6 col-xl-4">
                            <button class="btn w-100 h-100 p-4 rounded-4 border border-dashed bg-white text-muted hover-lift d-flex flex-column align-items-center justify-content-center" 
                                    data-bs-toggle="modal" data-bs-target="#addPriceTierModal">
                                <i class="fas fa-plus-circle fa-2x mb-2 opacity-25 text-primary"></i>
                                <span class="fw-bold small">Release New Tier</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Geospatial Intelligence -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white overflow-hidden border-top border-4 border-primary">
                <div class="card-body p-0">
                    <div class="map-placeholder" style="height: 220px; background: #0f172a; position: relative;">
                         <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1!2d0!3d0!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTPCsDAwJzAwLjAiTiAwwrAwMCswMC4wIlc!5e0!3m2!1sen!2sus!4v1" style="width: 100%; height: 100%; border: 0; filter: invert(0.95) contrast(1.2) grayscale(0.2); opacity: 0.8;" allowfullscreen="" loading="lazy"></iframe>
                        <div class="position-absolute bottom-0 start-0 m-3 z-2">
                             <div class="glass-badge px-3 py-1 rounded-pill blur-bg text-white fw-bold x-small shadow-sm">
                                <i class="fas fa-compass me-1"></i> COORD: @(tour.Location?.City ?? "GLOBAL")
                             </div>
                        </div>
                    </div>
                    <div class="p-4">
                        <h6 class="fw-black text-uppercase x-small text-muted mb-3 ls-lg">Geospatial Meta</h6>
                        <div class="d-flex align-items-start gap-2 mb-3">
                            <div class="icon-square-sm bg-soft-primary text-primary rounded-2 p-2"><i class="fas fa-map-pin"></i></div>
                            <div>
                                <p class="small fw-black text-dark mb-0">@tour.Location?.City, @tour.Location?.Country</p>
                                <p class="x-small text-muted mb-0 fw-medium">@(tour.Location?.Street ?? "Primary Adventure Zone")</p>
                            </div>
                        </div>
                        <button class="btn btn-premium-white w-100 rounded-3 py-2 fw-black x-small ls-sm border shadow-sm" data-bs-toggle="modal" data-bs-target="#updateLocationModal">
                            SHIFT COORDINATES
                        </button>
                    </div>
                </div>
            </div>

            <!-- Visual Asset Registry -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 bg-white">
                <div class="card-header bg-transparent border-0 pt-4 px-4 d-flex justify-content-between align-items-center">
                    <h6 class="fw-black text-uppercase x-small text-muted mb-0 ls-lg">Media Assets</h6>
                    <button class="btn btn-icon-soft" data-bs-toggle="modal" data-bs-target="#addImageModal">
                        <i class="fas fa-plus small"></i>
                    </button>
                </div>
                <div class="card-body p-4 pt-2">
                    <div class="row g-2">
                        @if (tour.Images != null && tour.Images.Any())
                        {
                            @foreach (var img in tour.Images)
                            {
                                <div class="col-4">
                                    <div class="gallery-item rounded-3 overflow-hidden shadow-sm hover-scale position-relative" style="height: 70px;">
                                        <img src="/@img.Url" class="w-100 h-100 object-fit-cover" alt="@img.AltText" />
                                        <div class="gallery-overlay"><i class="fas fa-trash-alt text-white small"></i></div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    @if (tour.Images == null || !tour.Images.Any())
                    {
                        <div class="text-center py-4 rounded-3 border border-dashed bg-light opacity-50">
                             <p class="x-small text-muted mb-0 fw-black text-uppercase ls-sm">No Auxiliary Media</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Market Advisory -->
            <div class="card border-0 shadow-sm rounded-4 mb-4 bg-premium-dark text-white overflow-hidden p-4 position-relative">
                <div class="protocol-bg-glow"></div>
                <i class="fas fa-chart-line position-absolute end-0 bottom-0 m-2 opacity-10" style="font-size: 80px;"></i>
                <h6 class="fw-black mb-3 x-small text-uppercase ls-lg opacity-50 position-relative z-1">Market Intelligence</h6>
                <div class="d-flex align-items-center mb-2 position-relative z-1">
                    <span class="h4 fw-black mb-0 me-2 tracking-tight">VIP Sector</span>
                    <span class="badge bg-success rounded-pill x-small fw-black">+12% Yield</span>
                </div>
                <p class="x-small opacity-75 mb-0 position-relative z-1 fw-medium mt-3">This adventure sector is performing in the <span class="text-primary fw-black">TOP 5%</span> of global listings.</p>
            </div>
        </div>
    </div>
</div>

<style>
    .tour-hero-row { min-height: 340px; }
    .tour-hero-media { min-height: 340px; }
    .tour-hero-img {
        height: 100%;
        object-fit: cover;
        object-position: center;
    }

    @@media (max-width: 991.98px) {
        .tour-hero-row { min-height: unset; }
        .tour-hero-media { min-height: 240px; }
        .tour-hero-img { height: 240px; }
    }
</style>

<!-- Modals -->
<div class="modal fade" id="addActivityModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-5 overflow-hidden">
            <div class="modal-header bg-dark text-white p-4 border-0">
                <h5 class="modal-title fw-bold">Create Adventure Node</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AddActivity" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="ActivityForm.TourId" value="@tour.Id" />
                <div class="modal-body p-4 bg-white">
                    <div class="mb-4">
                        <label class="form-label x-small fw-bold text-muted text-uppercase">Node Designation</label>
                        <input asp-for="ActivityForm.Title" class="form-control border-0 bg-light py-2 rounded-3" placeholder="e.g. Desert Safari Night" required />
                    </div>
                    <div class="mb-4">
                        <label class="form-label x-small fw-bold text-muted text-uppercase">Logistics Briefing</label>
                        <textarea asp-for="ActivityForm.Description" class="form-control border-0 bg-light py-2 rounded-3" rows="3"></textarea>
                    </div>
                    <div class="mb-0">
                        <label class="form-label x-small fw-bold text-muted text-uppercase">Primary Visual</label>
                        <input name="ActivityForm.ImageFile" type="file" class="form-control border-0 bg-light py-2 rounded-3" accept="image/*" />
                    </div>
                </div>
                <div class="modal-footer border-0 p-4 pt-0">
                    <button type="button" class="btn btn-light rounded-3 px-4" data-bs-dismiss="modal">Discard</button>
                    <button type="submit" class="btn btn-dark rounded-3 px-4 fw-bold">Deploy Activity</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="addPriceTierModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content border-0 shadow-lg rounded-5 overflow-hidden">
            <div class="modal-header bg-primary text-white p-3 border-0">
                <h6 class="modal-title fw-bold">New Inventory Tier</h6>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AddPriceTier" method="post">
                <input type="hidden" asp-for="PriceTierForm.TourId" value="@tour.Id" />
                <div class="modal-body p-4 text-center">
                    <div class="mb-3">
                        <label class="form-label x-small fw-bold text-muted text-uppercase">Designation</label>
                        <input asp-for="PriceTierForm.Name" class="form-control border-0 bg-light text-center py-2 rounded-3" placeholder="e.g. VIP" required />
                    </div>
                    <div class="mb-0">
                        <label class="form-label x-small fw-bold text-muted text-uppercase">Commercial Valve ($)</label>
                        <input asp-for="PriceTierForm.Amount" type="number" step="0.01" class="form-control border-0 bg-light text-center fs-3 fw-black py-2 rounded-3" required />
                    </div>
                </div>
                <div class="modal-footer border-0 p-3 pt-0">
                    <button type="submit" class="btn btn-primary w-100 py-3 fw-bold rounded-3 ls-md">ACTIVATE TIER</button>
                </div>
            </form>
        </div>
    </div>
</div>





