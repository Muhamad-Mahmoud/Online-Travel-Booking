@model OnlineTravel.Domain.Exceptions.PaginatedResult<OnlineTravel.Domain.Entities.Hotels.Hotel>
@{
    ViewData["Title"] = "Hotels Fleet";
    var search = ViewBag.SearchTerm as string;
}

<div class="container-fluid py-4">
    <!-- Authority Header -->
    <partial name="_AdminPageHeader" model='new AdminPageHeaderViewModel {
        Title = "Property",
        TitleSuffix = "Fleet",
        IconClass = "fas fa-hotel",
        IconBgClass = "bg-dark",
        StatusText = "ACTIVE REGISTRY",
        BadgeText = $"TOTAL: {Model.TotalCount} PROPERTIES",
        Breadcrumbs = new List<BreadcrumbItem> {
            new BreadcrumbItem { Text = "Hotels", IsActive = true }
        },
        ShowSearch = true,
        SearchValue = search,
        SearchPlaceholder = "Search properties...",
        ActionButtons = new List<ActionButtonViewModel> {
            new ActionButtonViewModel { 
                Text = "New Property", 
                IconClass = "fas fa-plus", 
                Action = "Create", 
                Class = "btn-premium-dark" 
            }
        }
    }' />

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm rounded-4 mb-4 d-flex align-items-center p-3 text-success bg-success-light">
            <div class="icon-square bg-success text-white me-3 rounded-circle" style="width:38px;height:38px;">
                <i class="fas fa-check"></i>
            </div>
            <div class="fw-bold">@TempData["Success"]</div>
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Total Properties",
                Value = Model.TotalCount.ToString(),
                IconClass = "fas fa-hotel",
                IconBgClass = "bg-primary-light",
                IconTextClass = "text-primary"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Page Rooms",
                Value = Model.Items.Sum(h => h.Rooms.Count).ToString(),
                IconClass = "fas fa-door-open",
                IconBgClass = "bg-success-light",
                IconTextClass = "text-success"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Rated (Page)",
                Value = Model.Items.Count(h => h.Rating != null).ToString(),
                IconClass = "fas fa-star",
                IconBgClass = "bg-warning-light",
                IconTextClass = "text-warning"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Images (Page)",
                Value = Model.Items.Count(h => !string.IsNullOrEmpty(h.MainImageUrl)).ToString(),
                IconClass = "fas fa-image",
                IconBgClass = "bg-danger-light",
                IconTextClass = "text-danger"
            }' />
        </div>
    </div>

    <!-- Hotels Table -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white p-4 border-bottom-light d-flex justify-content-between align-items-center">
            <h6 class="fw-black mb-0 text-dark">Property Registry</h6>
            <span class="badge bg-primary-light text-primary rounded-pill px-3 fw-bold x-small">@Model.TotalCount Records</span>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light x-small text-uppercase fw-black text-muted">
                    <tr>
                        <th class="ps-4 py-3">Property</th>
                        <th class="text-center d-none d-sm-table-cell">Location</th>
                        <th class="text-center d-none d-md-table-cell">Rooms</th>
                        <th class="text-center d-none d-lg-table-cell">Rating</th>
                        <th class="text-center d-none d-lg-table-cell">Check-In</th>
                        <th class="pe-4"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Items.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="fas fa-hotel fa-3x opacity-25 mb-3 d-block"></i>
                                <div class="fw-bold">No properties found</div>
                                <div class="x-small mt-1">@(string.IsNullOrEmpty(search) ? "Start by creating your first property." : $"No results for \"{search}\"")</div>
                            </td>
                        </tr>
                    }
                    @foreach (var hotel in Model.Items)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center gap-3">
                                    @if (!string.IsNullOrEmpty(hotel.MainImageUrl))
                                    {
                                        <img src="@hotel.MainImageUrl" alt="@hotel.Name" class="rounded-3 shadow-sm admin-thumb-48" />
                                    }
                                    else
                                    {
                                        <div class="icon-square bg-primary-light text-primary rounded-3" style="width:48px;height:48px;">
                                            <i class="fas fa-hotel"></i>
                                        </div>
                                    }
                                    <div>
                                        <div class="fw-black text-dark small">@hotel.Name</div>
                                        <div class="x-small text-muted">@hotel.Slug</div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center d-none d-sm-table-cell">
                                <div class="small fw-bold text-dark">@(hotel.Address?.City ?? "—")</div>
                                <div class="x-small text-muted">@(hotel.Address?.Country ?? "")</div>
                            </td>
                            <td class="text-center d-none d-md-table-cell">
                                <span class="badge bg-primary-light text-primary px-3 py-2 rounded-pill fw-bold">@hotel.Rooms.Count rooms</span>
                            </td>
                            <td class="text-center d-none d-lg-table-cell">
                                @if (hotel.Rating != null)
                                {
                                    <span class="text-warning fw-black small">@string.Concat(Enumerable.Repeat("★", (int)hotel.Rating))</span>
                                }
                                else
                                {
                                    <span class="text-muted x-small">No Rating</span>
                                }
                            </td>
                            <td class="text-center d-none d-lg-table-cell">
                                <div class="x-small fw-bold text-dark">@(hotel.CheckInTime?.Start.ToString("HH:mm") ?? "—") – @(hotel.CheckInTime?.End.ToString("HH:mm") ?? "")</div>
                            </td>
                            <td class="pe-4">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a asp-controller="Hotels" asp-action="Manage" asp-route-id="@hotel.Id" class="btn btn-icon-soft btn-soft-primary" title="Manage">
                                        <i class="fas fa-cog"></i>
                                    </a>
                                    <a asp-controller="Hotels" asp-action="Edit" asp-route-id="@hotel.Id" class="btn btn-icon-soft btn-soft-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-controller="Hotels" asp-action="Delete" asp-route-id="@hotel.Id" method="post" class="d-inline" data-confirm="This hotel will be permanently deleted. Are you sure?" data-confirm-title="Delete Hotel">
                                        <button type="submit" class="btn btn-icon-soft btn-soft-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model.TotalPages >= 1)
        {
            <div class="card-footer bg-white border-top p-3 text-center">
                <partial name="_Pagination" model='@(PaginationViewModel.Create(Model, "Index", "Hotels", new { search = (object?)search }))' />
            </div>
        }
    </div>
</div>
