@model UpdateAirportCommand

@{
    ViewData["Title"] = "Edit Airport";
}

<div class="row g-3 justify-content-between align-items-center mb-4">
    <div class="col-12 col-lg-auto">
        <h1 class="h3 fw-bold text-dark mb-1">Edit Airport</h1>
        <p class="text-muted small mb-0">Update airport <strong>@Model.Code</strong> â€” @Model.Name.</p>
    </div>
    <div class="col-12 col-lg-auto">
        <a asp-action="Airports" class="btn btn-white shadow-sm">
            <i class="fas fa-arrow-left me-2 text-muted"></i>Back to Airports
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form asp-action="EditAirport" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="card shadow-sm border-0 rounded-4 overflow-hidden mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-dark"><i class="fas fa-map-marker-alt text-primary me-2"></i>Airport Info</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label asp-for="Code" class="form-label small text-muted">IATA Code</label>
                            <input asp-for="Code" class="form-control form-control-lg text-center fw-bold text-uppercase" maxlength="3" />
                            <span asp-validation-for="Code" class="text-danger small"></span>
                        </div>
                        <div class="col-md-9">
                            <label asp-for="Name" class="form-label small text-muted">Airport Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-4 overflow-hidden mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-dark"><i class="fas fa-map text-info me-2"></i>Address</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12">
                            <label asp-for="Street" class="form-label small text-muted">Street</label>
                            <input asp-for="Street" class="form-control" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="City" class="form-label small text-muted">City</label>
                            <input asp-for="City" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="State" class="form-label small text-muted">State</label>
                            <input asp-for="State" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Country" class="form-label small text-muted">Country</label>
                            <input asp-for="Country" class="form-control" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="ZipCode" class="form-label small text-muted">Zip Code</label>
                            <input asp-for="ZipCode" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-4 overflow-hidden mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-dark"><i class="fas fa-concierge-bell text-success me-2"></i>Facilities</h6>
                </div>
                <div class="card-body">
                    <label asp-for="FacilitiesText" class="form-label small text-muted">Facilities (comma-separated)</label>
                    <input asp-for="FacilitiesText" class="form-control" placeholder="Free Wi-Fi, Lounge, Car Rental, ATM" />
                </div>
            </div>

            <div class="d-flex gap-2 justify-content-end mb-4">
                <a asp-action="Airports" class="btn btn-white px-4">Cancel</a>
                <button type="submit" class="btn btn-primary px-4 shadow-sm"><i class="fas fa-save me-2"></i>Save Changes</button>
            </div>
        </form>
    </div>
</div>

<style>
    .btn-white { background-color: #fff; border: 1px solid #e3e6f0; color: #6e707e; }
    .btn-white:hover { background-color: #f8f9fc; }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}