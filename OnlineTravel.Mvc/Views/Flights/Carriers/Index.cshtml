@model OnlineTravel.Domain.Exceptions.PaginatedResult<OnlineTravel.Domain.Entities.Flights.Carrier>

@{
    ViewData["Title"] = "Carriers (Airlines)";
}

<div class="container-fluid py-4">
    <!-- Authority Header -->
    <partial name="_AdminPageHeader" model='new AdminPageHeaderViewModel {
        Title = "Airline",
        TitleSuffix = "Carriers",
        IconClass = "fas fa-plane",
        IconBgClass = "bg-primary",
        StatusText = "OPS MONITORING",
        StatusIconClass = "fas fa-broadcast-tower",
        BadgeText = $"TOTAL: {Model.TotalCount} CARRIERS",
        Breadcrumbs = new List<BreadcrumbItem> {
            new BreadcrumbItem { Text = "Flights", Controller = "Flights", Action = "Index" },
            new BreadcrumbItem { Text = "Carriers", IsActive = true }
        },
        ShowSearch = false,
        ActionButtons = new List<ActionButtonViewModel> {
            new ActionButtonViewModel { 
                Text = "New Carrier", 
                IconClass = "fas fa-plus-circle", 
                Action = "CreateCarrier", 
                Class = "btn-premium-dark" 
            }
        }
    }' />

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-3">
    @foreach (var carrier in Model.Items)
    {
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden h-100">
                <div class="card-body d-flex align-items-start gap-3">
                    @if (!string.IsNullOrEmpty(carrier.Logo))
                    {
                        <img src="@carrier.Logo" alt="@carrier.Name" class="rounded-3 admin-thumb-48 admin-logo-contain" />
                    }
                    else
                    {
                        <div class="bg-primary-light text-primary d-flex align-items-center justify-content-center rounded-3" style="width:48px;height:48px;min-width:48px;">
                            <i class="fas fa-plane"></i>
                        </div>
                    }
                    <div class="flex-grow-1">
                        <h6 class="fw-bold text-dark mb-0">@carrier.Name</h6>
                        <span class="badge bg-primary-light text-primary px-2 py-1 rounded-pill fw-bold x-small mt-1">@carrier.Code?.Value</span>
                        <div class="mt-2">
                            @if (carrier.ContactInfo != null)
                            {
                                if (carrier.ContactInfo.Phone != null)
                                {
                                    <div class="text-muted x-small"><i class="fas fa-phone me-1"></i>@carrier.ContactInfo.Phone</div>
                                }
                                if (carrier.ContactInfo.Email != null)
                                {
                                    <div class="text-muted x-small"><i class="fas fa-envelope me-1"></i>@carrier.ContactInfo.Email</div>
                                }
                            }
                        </div>
                    </div>
                    <div>
                        @if (carrier.IsActive)
                        {
                            <span class="badge bg-success-light text-success px-2 py-1 rounded-pill fw-normal x-small">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger-light text-danger px-2 py-1 rounded-pill fw-normal x-small">Inactive</span>
                        }
                    </div>
                </div>
                <div class="card-footer bg-white border-top d-flex justify-content-end gap-2 py-2">
                    <form asp-controller="Flights" asp-action="DeleteCarrier" method="post" class="d-inline" data-confirm="Carrier @carrier.Name will be deleted. Are you sure?" data-confirm-title="Delete Carrier">
                        <input type="hidden" name="id" value="@carrier.Id" />
                        <button type="submit" class="btn btn-icon-soft btn-soft-danger" title="Delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Items.Any())
{
    <div class="card shadow-sm border-0 rounded-4 overflow-hidden mt-3">
        <div class="card-body text-center py-5">
            <i class="fas fa-plane display-4 text-muted opacity-25"></i>
            <p class="text-muted mt-3">No carriers found. Click <strong>Add Carrier</strong> to register an airline.</p>
        </div>
    </div>
}

@if (Model.TotalPages >= 1)
{
    <div class="mt-4">
        <partial name="_Pagination" model="@(PaginationViewModel.Create<OnlineTravel.Domain.Entities.Flights.Carrier>(Model, "Carriers", "Flights"))" />
    </div>
}
</div>




