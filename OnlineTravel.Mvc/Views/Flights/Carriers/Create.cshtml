@model CreateCarrierCommand

@{
    ViewData["Title"] = "Add Carrier";
}

<div class="row g-3 justify-content-between align-items-center mb-4">
    <div class="col-12 col-lg-auto">
        <h1 class="h3 fw-bold text-dark mb-1">Add Carrier</h1>
        <p class="text-muted small mb-0">Register a new airline carrier in the system.</p>
    </div>
    <div class="col-12 col-lg-auto">
        <a asp-action="Carriers" class="btn btn-white shadow-sm">
            <i class="fas fa-arrow-left me-2 text-muted"></i>Back to Carriers
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <form asp-action="CreateCarrier" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="card shadow-sm border-0 rounded-4 overflow-hidden mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-dark"><i class="fas fa-plane text-primary me-2"></i>Carrier Details</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label asp-for="Code" class="form-label small text-muted">IATA Code</label>
                            <input asp-for="Code" class="form-control form-control-lg text-center fw-bold text-uppercase" maxlength="3" placeholder="MS" />
                            <span asp-validation-for="Code" class="text-danger small"></span>
                        </div>
                        <div class="col-md-9">
                            <label asp-for="Name" class="form-label small text-muted">Carrier Name</label>
                            <input asp-for="Name" class="form-control" placeholder="EgyptAir" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Logo" class="form-label small text-muted">Logo URL</label>
                        <input asp-for="Logo" class="form-control" placeholder="https://example.com/logo.png" />
                        <span asp-validation-for="Logo" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-4 overflow-hidden mb-4">
                <div class="card-header bg-white py-3 border-bottom">
                    <h6 class="m-0 fw-bold text-dark"><i class="fas fa-address-book text-info me-2"></i>Contact Information</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label small text-muted">Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label small text-muted">Phone</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 justify-content-end mb-4">
                <a asp-action="Carriers" class="btn btn-white px-4">Cancel</a>
                <button type="submit" class="btn btn-primary px-4 shadow-sm"><i class="fas fa-plus me-2"></i>Create Carrier</button>
            </div>
        </form>
    </div>
</div>

<style>
    .btn-white { background-color: #fff; border: 1px solid #e3e6f0; color: #6e707e; }
    .btn-white:hover { background-color: #f8f9fc; }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


