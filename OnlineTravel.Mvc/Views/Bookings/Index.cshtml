@model BookingsIndexViewModel
@{
    ViewData["Title"] = "Bookings Portal";
    var search = ViewBag.SearchTerm as string;
    var currentStatus = ViewBag.Status as string;
    var statuses = ViewBag.BookingStatuses as List<string> ?? new List<string>();
}

<div class="container-fluid py-4">
    <!-- Authority Header -->
    <partial name="_AdminPageHeader" model='new AdminPageHeaderViewModel {
        Title = "Booking",
        TitleSuffix = "Portal",
        IconClass = "fas fa-receipt",
        IconBgClass = "bg-dark",
        StatusText = "LIVE MONITORING",
        BadgeText = $"TOTAL: {Model.Stats.TotalBookings} TRANSACTIONS",
        Breadcrumbs = new List<BreadcrumbItem> {
            new BreadcrumbItem { Text = "Bookings", IsActive = true }
        },
        ShowSearch = true,
        SearchInputName = "searchTerm",
        SearchValue = search,
        SearchPlaceholder = "Reference, name, email...",
        ShowStatusFilter = true,
        StatusFilterName = "status",
        StatusOptions = statuses.Select(s => new StatusOption { 
            Text = s, 
            Value = s, 
            Selected = currentStatus == s 
        }).ToList(),
        ActionButtons = new List<ActionButtonViewModel> {
            new ActionButtonViewModel { 
                Text = "Export CSV", 
                IconClass = "fas fa-file-export", 
                Action = "Export", 
                Class = "btn-outline-dark" 
            }
        }
    }' />

    <!-- Stats Row -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Total Bookings",
                Value = Model.Stats.TotalBookings.ToString(),
                IconClass = "fas fa-shopping-cart",
                IconBgClass = "bg-primary-light",
                IconTextClass = "text-primary"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Pending Payment",
                Value = Model.Stats.PendingBookings.ToString(),
                IconClass = "fas fa-clock",
                IconBgClass = "bg-warning-light",
                IconTextClass = "text-warning"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Total Revenue",
                Value = Model.Stats.TotalRevenue.ToString("N2"),
                IconClass = "fas fa-dollar-sign",
                IconBgClass = "bg-success-light",
                IconTextClass = "text-success"
            }' />
        </div>
        <div class="col-6 col-md-3">
            <partial name="_AdminStatCard" model='new AdminStatCardViewModel {
                Title = "Cancelled",
                Value = Model.Stats.CancelledBookings.ToString(),
                IconClass = "fas fa-times-circle",
                IconBgClass = "bg-danger-light",
                IconTextClass = "text-danger"
            }' />
        </div>
    </div>

    <!-- Bookings Table -->
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white p-4 border-bottom-light d-flex justify-content-between align-items-center">
            <h6 class="fw-black mb-0 text-dark">Transaction Registry</h6>
            <span class="badge bg-primary-light text-primary rounded-pill px-3 fw-bold x-small">@Model.Bookings.TotalCount Records</span>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light x-small text-uppercase fw-black text-muted">
                    <tr>
                        <th class="ps-4 py-3">Reference</th>
                        <th class="text-center">Customer</th>
                        <th class="text-center d-none d-md-table-cell">Type/Item</th>
                        <th class="text-center">Amount</th>
                        <th class="text-center">Status</th>
                        <th class="text-center d-none d-lg-table-cell">Date</th>
                        <th class="pe-4"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Bookings.Data.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="fas fa-receipt fa-3x opacity-25 mb-3 d-block"></i>
                                <div class="fw-bold">No bookings found</div>
                                <div class="x-small mt-1">Try adjusting your filters or search term.</div>
                            </td>
                        </tr>
                    }
                    @foreach (var booking in Model.Bookings.Data)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-black text-dark small">#@booking.BookingReference</div>
                                <div class="x-small text-muted">ID: @booking.Id.ToString().Substring(0, 8)...</div>
                            </td>
                            <td class="text-center">
                                <div class="fw-bold text-dark small">@booking.UserName</div>
                                <div class="x-small text-muted">@booking.UserEmail</div>
                            </td>
                            <td class="text-center d-none d-md-table-cell">
                                <div class="badge bg-light text-dark mb-1 fw-bold">@booking.Type</div>
                                <div class="small fw-semibold text-primary">@booking.ItemName</div>
                            </td>
                            <td class="text-center">
                                <div class="fw-black text-dark small">@booking.TotalAmount.ToString("N2") @booking.Currency</div>
                                @if (booking.PaidAt.HasValue)
                                {
                                    <div class="x-small text-success fw-bold"><i class="fas fa-check-double me-1"></i> PAID</div>
                                }
                            </td>
                            <td class="text-center">
                                @{
                                    var statusClass = booking.Status switch
                                    {
                                        "Confirmed" => "status-operational",
                                        "PendingPayment" => "status-warning",
                                        "Cancelled" => "status-error",
                                        "Paid" => "status-operational",
                                        _ => "status-warning"
                                    };
                                }
                                <span class="status-pill @statusClass">
                                    @booking.Status.ToUpper()
                                </span>
                            </td>
                            <td class="text-center d-none d-lg-table-cell">
                                <div class="small fw-bold text-dark">@booking.BookingDate.ToString("MMM dd, yyyy")</div>
                                <div class="x-small text-muted">@booking.BookingDate.ToString("HH:mm")</div>
                            </td>
                            <td class="pe-4 text-end">
                                <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-icon-soft btn-soft-primary" title="Details">
                                    <i class="fas fa-external-link-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        @if (Model.Bookings.TotalPages >= 1)
        {
            <div class="card-footer bg-white border-top p-3 text-center">
                <partial name="_Pagination" model="@(PaginationViewModel.Create((OnlineTravel.Application.Common.PagedResult<OnlineTravel.Application.Features.Bookings.Shared.DTOs.AdminBookingResponse>)Model.Bookings, "Index", "Bookings", new { searchTerm = (object?)search, status = (object?)currentStatus }))" />
            </div>
        }
    </div>
</div>


