{
  "info": {
    "name": "Hotel & Room Only",
    "description": "فقط endpoints الفنادق والغرف (بدون Bookings). baseUrl = https://localhost:5091",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "https://localhost:5091" },
    { "key": "hotelId", "value": "" },
    { "key": "roomId", "value": "" }
  ],
  "item": [
    {
      "name": "1 - Search Hotels",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/v1/hotels?pageNumber=1&pageSize=10"
      }
    },
    {
      "name": "2 - Upload Hotel Image",
      "request": {
        "method": "POST",
        "body": {
          "mode": "formdata",
          "formdata": [{ "key": "file", "type": "file", "src": "" }]
        },
        "url": "{{baseUrl}}/api/v1/Upload/hotel-image"
      }
    },
    {
      "name": "3 - Create Hotel",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"فندق التجربة\",\n  \"slug\": \"test-hotel-cairo\",\n  \"description\": \"فندق في القاهرة.\",\n  \"latitude\": 30.0444,\n  \"longitude\": 31.2357,\n  \"street\": \"شارع 123\",\n  \"city\": \"Cairo\",\n  \"state\": \"Cairo\",\n  \"country\": \"Egypt\",\n  \"postalCode\": \"11511\",\n  \"mainImage\": \"https://example.com/hotel.jpg\",\n  \"gallery\": [],\n  \"checkInTime\": \"14:00\",\n  \"checkOutTime\": \"11:00\",\n  \"cancellationPolicy\": \"إلغاء مجاني 24 ساعة.\",\n  \"contactPhone\": \"+201234567890\",\n  \"contactEmail\": \"info@hotel.com\",\n  \"website\": \"https://hotel.com\"\n}"
        },
        "url": "{{baseUrl}}/api/v1/admin/hotels"
      }
    },
    {
      "name": "4 - Get Hotel Details",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/v1/hotels/{{hotelId}}"
      }
    },
    {
      "name": "5 - Update Hotel",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"فندق التجربة (محدّث)\",\n  \"description\": \"وصف محدّث.\",\n  \"latitude\": 30.0444,\n  \"longitude\": 31.2357,\n  \"street\": \"شارع 123\",\n  \"city\": \"Cairo\",\n  \"state\": \"Cairo\",\n  \"country\": \"Egypt\",\n  \"postalCode\": \"11511\",\n  \"mainImage\": \"https://example.com/hotel.jpg\",\n  \"checkInTime\": \"15:00\",\n  \"checkOutTime\": \"12:00\",\n  \"cancellationPolicy\": \"إلغاء مجاني 48 ساعة.\",\n  \"contactPhone\": \"+201234567890\",\n  \"contactEmail\": \"info@hotel.com\",\n  \"website\": \"https://hotel.com\"\n}"
        },
        "url": "{{baseUrl}}/api/v1/admin/hotels/{{hotelId}}"
      }
    },
    {
      "name": "6 - Upload Room Image",
      "request": {
        "method": "POST",
        "body": {
          "mode": "formdata",
          "formdata": [{ "key": "file", "type": "file", "src": "" }]
        },
        "url": "{{baseUrl}}/api/v1/Upload/room-image"
      }
    },
    {
      "name": "7 - Add Room",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"hotelId\": \"{{hotelId}}\",\n  \"roomNumber\": \"101\",\n  \"name\": \"غرفة مزدوجة\",\n  \"description\": \"غرفة مريحة.\",\n  \"basePricePerNight\": 99.99,\n  \"photos\": []\n}"
        },
        "url": "{{baseUrl}}/api/v1/admin/hotels/{{hotelId}}/rooms"
      }
    },
    {
      "name": "8 - Get Hotel Rooms",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/v1/hotels/{{hotelId}}/rooms?checkin=2026-03-01&checkout=2026-03-05"
      }
    },
    {
      "name": "9 - Edit Room",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"{{roomId}}\",\n  \"name\": \"غرفة مزدوجة (محدّثة)\",\n  \"description\": \"وصف محدّث.\",\n  \"basePricePerNight\": 119.99\n}"
        },
        "url": "{{baseUrl}}/api/v1/admin/rooms/{{roomId}}"
      }
    },
    {
      "name": "10 - Room Availability",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"roomId\": \"{{roomId}}\",\n  \"startDate\": \"2026-03-01\",\n  \"endDate\": \"2026-03-31\",\n  \"isAvailable\": true\n}"
        },
        "url": "{{baseUrl}}/api/v1/admin/rooms/{{roomId}}/availability"
      }
    },
    {
      "name": "11 - Seasonal Pricing",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"roomId\": \"{{roomId}}\",\n  \"startDate\": \"2026-06-01\",\n  \"endDate\": \"2026-08-31\",\n  \"price\": 149.99\n}"
        },
        "url": "{{baseUrl}}/api/v1/admin/rooms/{{roomId}}/seasonal-pricing"
      }
    },
    {
      "name": "12 - Add Review",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"hotelId\": \"{{hotelId}}\",\n  \"userId\": \"ضع-userId-من-seed-data\",\n  \"rating\": 5,\n  \"comment\": \"إقامة ممتازة\"\n}"
        },
        "url": "{{baseUrl}}/api/v1/hotels/{{hotelId}}/reviews"
      }
    }
  ]
}
